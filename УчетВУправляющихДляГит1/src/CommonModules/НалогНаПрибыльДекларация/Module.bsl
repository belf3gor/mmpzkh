Функция НалоговаяБаза(РассчитанныеЗначения, КонтекстРасчета, Контейнер, ИмяРедакции)
	
	СхемаРасчета = СхемаРасчетаНалоговойБазы(КонтекстРасчета);
	
	// Соберем данные из двух источников:
	// - РассчитанныеЗначения
	// - Контейнер
	ЗначенияСлагаемых = Новый Соответствие; // Ключ - имя показателя; Значение - число, сумма.
	ОписаниеТипаЧисло = Новый ОписаниеТипов("Число", , , Новый КвалификаторыЧисла(15, 0)); // Порядок представления декларации предполагает такой тип числа
	Для Каждого Показатель Из СхемаРасчета.Показатели Цикл
		ОписаниеЗначения = РассчитанноеЗначение(РассчитанныеЗначения, Показатель.Имя, Показатель.ЭтапРасчета);
		Если ОписаниеЗначения <> Неопределено Тогда
			Значение = ОписаниеТипаЧисло.ПривестиЗначение(ОписаниеЗначения.СуммаНУ);
		ИначеЕсли Не ЗначениеЗаполнено(Показатель.НомерЛиста) Тогда
			Продолжить;
		Иначе
			// Возьмем из контейнера БРО
			ИмяРазделаБРО = ИмяРазделаБРО(Показатель);
			РазделБРО = РазделБРО(Контейнер, ИмяРазделаБРО);
			Если РазделБРО = Неопределено Тогда
				Продолжить;
			КонецЕсли;
			
			СтраницаБРО = РазделБРО[0];
			
			ПоказателиБРО = РаспаковатьПоказателиБРО(СтраницаБРО);
			Если ПоказателиБРО = Неопределено Тогда
				Продолжить;
			КонецЕсли;
			
			НомерЯчейкиБРО = НомерПоказателяБРО(Показатель, ИмяРедакции);
			
			Значение = 0;
			ПоказателиБРО.Свойство(НомерЯчейкиБРО, Значение);
			Значение = ОписаниеТипаЧисло.ПривестиЗначение(Значение);
			
		КонецЕсли;
		
		ЗначенияСлагаемых.Вставить(Показатель.Имя, Значение);
		
	КонецЦикла;
	
	// Посчитаем формулу
	НалоговаяБаза = 0;
	Для Каждого Слагаемое Из СхемаРасчета.Формулы Цикл
		
		Если Слагаемое.Результат <> "НалоговаяБаза" Тогда
			Продолжить;
		КонецЕсли;
		
		Значение = ЗначенияСлагаемых[Слагаемое.ЭлементФормулы];
		Если Значение = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		Если Слагаемое.Оператор = "-" Тогда
			НалоговаяБаза = НалоговаяБаза - Значение;
		ИначеЕсли Слагаемое.Оператор = "+" Тогда
			НалоговаяБаза = НалоговаяБаза + Значение;
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат НалоговаяБаза;
	
КонецФункции

Процедура ПередатьРасчетРаспределенияНалогаБРО(Контейнер, Расчет, ИмяРедакции, КонтекстРасчета)
	
	ОписаниеФормы = ОписаниеФормыРасчетаРаспределенияНалога(КонтекстРасчета);
	Если Не ЗначениеЗаполнено(ОписаниеФормы) Тогда
		Возврат;
	КонецЕсли;
		
	// Все показатели расчета размещены на страницах одного и того же листа.
	
	ИмяРазделаБРО = ИмяРазделаБРО(ОписаниеФормы[0]);
	
	РазделБРО = РазделБРО(Контейнер, ИмяРазделаБРО);
	
	Если РазделБРО = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	// Обеспечим нужное количество страниц:
	КоличествоСтраницНужно  = Расчет.Количество();
	КоличествоСтраницСейчас = РазделБРО.Количество();
	
	Если КоличествоСтраницНужно = 0 Тогда
		// - удалим все данные: очистим первую страницу и удалим все остальные
		
		СтраницаБРО = РазделБРО[0];
		
		Для Каждого Показатель Из ОписаниеФормы Цикл
			НомерЯчейкиБРО = НомерПоказателяБРО(Показатель, ИмяРедакции);
			ПоместитьЗначениеПоказателяНаСтраницуБРО(СтраницаБРО, НомерЯчейкиБРО, Неопределено);
		КонецЦикла;
		
		Для НомерСтраницы = 2 По КоличествоСтраницСейчас Цикл
			РазделБРО.Удалить(1);
		КонецЦикла;
		
		Возврат;
		
	КонецЕсли;
	
	// - удалим лишние
	Для НомерСтраницы = 1 По КоличествоСтраницСейчас - КоличествоСтраницНужно Цикл
		// a. КоличествоСтраницНужно - это меньше, чем сейчас
		// b. этот индекс на 1 больше, чем наибольший индекс нужной страницы
		РазделБРО.Удалить(КоличествоСтраницНужно);
	КонецЦикла;
	// - добавим недостающие
	Для НомерСтраницы = 1 По КоличествоСтраницНужно - КоличествоСтраницСейчас Цикл
		ДобавитьСтраницуБРО(РазделБРО);
	КонецЦикла;
	
	// Заполним страницы
	Для Каждого ЗаписьРасчета Из Расчет Цикл
		
		СтраницаБРО = РазделБРО[Расчет.Индекс(ЗаписьРасчета)];
		
		ВключитьСтраницу(СтраницаБРО, ОписаниеФормы[0], ИмяРедакции);
		
		Для Каждого Показатель Из ОписаниеФормы Цикл
			
			НомерЯчейкиБРО = НомерПоказателяБРО(Показатель, ИмяРедакции);
			Значение       = ЗаписьРасчета[Показатель.Имя];
			ПоместитьЗначениеПоказателяНаСтраницуБРО(СтраницаБРО, НомерЯчейкиБРО, Значение);
			
		КонецЦикла;
		
	КонецЦикла;
	
КонецПроцедуры

