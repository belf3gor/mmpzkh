		КонецЕсли;
		
		ИсточникДанных = ДобавитьИсточникДанных(СхемаРасчета, "ТорговыйСбор");
		ИсточникДанных.ОтборДанных.Показатель = "УменьшениеНалогаНаТорговыйСбор";   // Сумма, на которую уменьшен налог в текущем периоде
				
