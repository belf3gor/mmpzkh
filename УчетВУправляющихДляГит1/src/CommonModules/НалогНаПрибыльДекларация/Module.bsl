			ОписаниеПоляОсновныеСредства.Представление);
	
		ДобавитьОтборВНастройкиОтчета(
			Настройки, 
			ОписаниеПоляОсновныеСредства.Имя, 
			ОсновноеСредство, 
			ВидСравненияКомпоновкиДанных.Равно);
			
	КонецЕсли;
	
	ОписаниеПоляДокументыАмортизационнойПремии = ОписаниеСубконтоСчета(
