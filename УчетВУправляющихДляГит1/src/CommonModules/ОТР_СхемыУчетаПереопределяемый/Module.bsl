// Возвращает синоним для схемы учета.
//
Функция ПолучитьСинонимРаздела(ИмяМакета) Экспорт
	
	Если ИмяМакета = "УПЖКХ_СхемаУчетаОбъектыУчета" Тогда
		Возврат "Объекты учета";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаНачисленияУслуг" Тогда
		Возврат "Начисления услуг";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаЛьготыИСкидки" Тогда
		Возврат "Льготы и скидки";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаНачисленияУслугНастройкаУслуг" Тогда
		Возврат "Начисления услуг (настройка услуг)";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаНачисленияУслугВводПоказаний" Тогда
		Возврат "Начисления услуг (ввод показаний приборов учета)";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаНачисленияУслугНастройкиУчета" Тогда
		Возврат "Начисления услуг (настройки учета)";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаНачисленияУслугОтчеты" Тогда
		Возврат "Начисления услуг (отчеты)";
	ИначеЕсли ИмяМакета = "УПЖКХ_СхемаУчетаНачисленияУслугРегистрацияОплаты" Тогда
		Возврат "Начисления услуг (регистрация оплаты)";
	КонецЕсли;
	
	Возврат "";
	
КонецФункции

// Возвращает массив имен общих макетов со схемами учета.
//
Функция ПолучитьМассивСИменамиМакетовСхемУчета() Экспорт
	
	МассивСИменамиСхемУчета = Новый Массив;
	
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаОбъектыУчета");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаНачисленияУслуг");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаЛьготыИСкидки");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаНачисленияУслугНастройкаУслуг");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаНачисленияУслугВводПоказаний");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаНачисленияУслугНастройкиУчета");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаНачисленияУслугОтчеты");
	МассивСИменамиСхемУчета.Добавить("УПЖКХ_СхемаУчетаНачисленияУслугРегистрацияОплаты");
	
	Возврат МассивСИменамиСхемУчета;
	
КонецФункции

