		ЗаписатьСобытиеВЖурнал(РезультатВыполненияЗапроса.ОписаниеОшибки,
			НСтр("ru = 'HTTP-запрос'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка()));
