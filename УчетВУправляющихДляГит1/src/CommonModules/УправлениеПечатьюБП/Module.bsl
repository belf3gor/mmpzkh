		Группа.ТолькоПросмотр = Истина;	
		
		МассивСтрок.Добавить(
				Новый ФорматированнаяСтрока(НСтр("ru = 'Размер печати и подписи превышает предельно допустимый (500 Кб).'")));
		МассивСтрок.Добавить(
				Новый ФорматированнаяСтрока(НСтр("ru = '
				|'")));
