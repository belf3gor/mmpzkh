			УровеньЖурналаРегистрации.Ошибка,
			Ссылка.Метаданные(),
			Ссылка,
			Подробно);
	Иначе
		Кратко = ТекстОшибки;
	КонецЕсли;
	
	ОбщегоНазначения.СообщитьПользователю(СтрЗаменить(Кратко, Символы.ПС, " "), Ссылка, , , Отказ);
	
