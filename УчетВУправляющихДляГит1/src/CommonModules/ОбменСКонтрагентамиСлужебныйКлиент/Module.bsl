	КонецЕсли;
	
	ПрофилиЭДОБезСертификатов = Неопределено;
	Если Контекст.Свойство("ПрофилиЭДОБезСертификатов", ПрофилиЭДОБезСертификатов) Тогда
		ПараметрыРегистрации = Новый Структура;
		ПараметрыРегистрации.Вставить("Операция",        "Отправка");
		ПараметрыРегистрации.Вставить("ПрофилиНастроек", ПрофилиЭДОБезСертификатов);
		ПараметрыРегистрации.Вставить("АдресТаблицыДанных");
		
		ОткрытьФормуПомощникаРегистрацииСертификатов(ПараметрыРегистрации);
	КонецЕсли;
	
	ВыполнитьОбработкуОповещения(Контекст.ОповещениеОЗавершении);
	
	Контекст.Очистить();
	
КонецПроцедуры

