&НаКлиенте
Процедура ОбработчикОжиданияПроверкаДанных()
	
	РезультатВыполненияЗаданияКалендаряБухгалтера = Неопределено;
	ПроверитьДанныеНаСервере(РезультатВыполненияЗаданияКалендаряБухгалтера);
	Если РезультатВыполненияЗаданияКалендаряБухгалтера <> Неопределено Тогда
		КалендарьБухгалтераКлиент.ОжидатьЗавершениеЗаполненияВФоне(РезультатВыполненияЗаданияКалендаряБухгалтера);
	КонецЕсли;
	
	Если Ошибка Тогда
		Перерисовать(5);
		Элементы.СтраницыРезультат.ТекущаяСтраница = Элементы.Ошибки;
	Иначе
		Перерисовать(5, "Успех", Истина);
		Элементы.СтраницыРезультат.ТекущаяСтраница = Элементы.Успех;			
	КонецЕсли;
	
	Элементы.СтраницыЗаголовокПеренос.ТекущаяСтраница = Элементы.СтраницаЗаголовокПереносЗавершен;
	Оповестить("ЗавершениеЗагрузкиИз1СПредприятия77");
	
	Если ОсновнаяОрганизация Тогда
		ОбщегоНазначенияБПКлиент.УстановитьОсновнуюОрганизацию(Организация);
	КонецЕсли;
	
	ОбновитьИнтерфейс();
		
КонецПроцедуры

&НаКлиенте
Функция ПодключитьсяКИБ()
	
	Если Элементы.ТаблицаПути.ТекущиеДанные = Неопределено Тогда
		ТекстСообщения = НСтр("ru = 'Не удалось произвести подключение к информационной базе'");		
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		ЗафиксироватьОшибку(ЭтаФорма, ТекстСообщения, НСтр("ru = 'Возможно, на Вашем компьютере не установлена платформа 1С:Предприятие 7.7, либо используется БАЗОВАЯ версия программы. Воспользуйтесь вариантом загрузки данных из файла, предварительно сформировав его в информационной базе, из которой производится перенос данных.'"));
		Ошибка = Истина;
		Возврат 0;
	КонецЕсли;
	
	ПутьКИБ = Элементы.ТаблицаПути.ТекущиеДанные.Путь;
	ИмяИБ   = Элементы.ТаблицаПути.ТекущиеДанные.Имя;
	
	// Шаг №1 - подключение к ИБ
	ЭтапКонвертации = "Подключение к информационной базе";
	Перерисовать(1, "Выполняется", Истина);
	Попытка
		v7 = Новый COMObject("V1CEnterprise.Application"); 
	Исключение
		Перерисовать(1);
		ТекстСообщения = Нстр("ru = 'Не удалось произвести подключение к информационной базе'");
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		ЗафиксироватьОшибку(ЭтаФорма, ТекстСообщения, НСтр("ru = 'Возможно, на Вашем компьютере не установлена платформа 1С:Предприятие 7.7, либо используется БАЗОВАЯ версия программы. Воспользуйтесь вариантом загрузки данных из файла, предварительно сформировав его в информационной базе, из которой производится перенос данных.'"));
		Ошибка = Истина;
		Возврат 0;
	КонецПопытки;
	
	Открыта = v7.Initialize(v7.RMTrade, "/D""" + ПутьКИБ + """ /M ", "NO_SPLASH_SHOW");
	
	Если НЕ Открыта Тогда
		Перерисовать(1);
		ТекстСообщения = Нстр("ru = 'Не удалось произвести подключение к информационной базе'");
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		ЗафиксироватьОшибку(ЭтаФорма, ТекстСообщения, НСтр("ru = 'Возможно, пользователь отменил подключение к информационной базе, либо была попытка немонопольного подключения.'"));
		Ошибка = Истина;
		Возврат 0;
	КонецЕсли;
	
	Возврат v7;
	
КонецФункции

&НаКлиенте
Функция ВыгрузитьИзИБ(v7)
	ДатаНачалаСтр = Формат(НачалоГода(ДатаНачала), "ДФ=dd.MM.yyyy");
	
	Если ВариантВыгрузкиДокументы Тогда
		ДатаОкончания = ДатаДокументы;
	Иначе
		ДатаОкончания = ДатаОбороты;
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ДатаОкончания) Тогда
		ДатаОкончания = НачалоГода(ДатаНачала);		
	КонецЕсли;		
	
	Если НЕ ВариантВыгрузкиОбороты И НЕ ВариантВыгрузкиДокументы Тогда
		ДатаОкончанияСтр = Формат(НачалоМесяца(ДатаНачала), "ДФ=dd.MM.yyyy");
	Иначе
		ДатаОкончанияСтр = Формат(КонецМесяца(ДатаОкончания), "ДФ=dd.MM.yyyy");
	КонецЕсли;
	
	Если ВариантВыгрузкиОбороты Тогда
		ГраницаВыгрузкиОборотовСтр = Формат(КонецМесяца(ДатаОбороты), "ДФ=dd.MM.yyyy");
	Иначе
		ГраницаВыгрузкиОборотовСтр = "";
	КонецЕсли;
	ВыгружатьСправочники       = ?(ВариантВыгрузкиСправочники,1,0);
	ВыгружатьОстатки           = ?(ВариантВыгрузкиОстатки,1,0);
	ВыгружатьОбороты           = ?(ВариантВыгрузкиОбороты,1,0);
	ВыгружатьДокументы         = ?(ВариантВыгрузкиДокументы,1,0);
	
	Объект.ИмяФайлаДанных = ИмяФайлаДанных;
	
	ПроверкаДанныхЧисло = 0;
	
	Если ПроверкаДанных Тогда
		ПроверкаДанныхЧисло = 1;
	КонецЕсли;	
	
	Если ВозрастРелизаКонфигурации >= 581 Тогда
		Если ИдентификаторКонфигурации = "BU42TK" Тогда
			Результат = v7.ВыгрузкаВ1СБухгалтерию8(ДатаНачалаСтр, ДатаОкончанияСтр, ИмяФайлаОбработки, ИмяФайлаПравил, ИмяФайлаДанных, 1, ГраницаВыгрузкиОборотовСтр, ВыгружатьСправочники, ВыгружатьОстатки, ВыгружатьОбороты, ВыгружатьДокументы, 0, 0, ПроверкаДанныхЧисло);
		КонецЕсли;
	Иначе
		Результат = v7.ВыгрузкаВ1СБухгалтерию8(ДатаНачалаСтр, ДатаОкончанияСтр, ИмяФайлаОбработки, ИмяФайлаПравил, ИмяФайлаДанных, 1, ГраницаВыгрузкиОборотовСтр, ВыгружатьСправочники, ВыгружатьОстатки, ВыгружатьОбороты, ВыгружатьДокументы);
	КонецЕсли;
	
	Если ПроверкаДанных Тогда
		Если ИдентификаторКонфигурации <> "BU42TK" Тогда
			ТекстСообщения = Нстр("ru = 'Проверка данных перед выгрузкой выполняется только для конфигурации ""1С:Бухгалтерия 7.7""'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		ИначеЕсли ВозрастРелизаКонфигурации < 581 Тогда
			ТекстСообщения = Нстр("ru = 'Для проверки данных перед выгрузкой из ""1С:Бухгалтерии 7.7"" требуется релиз не ниже 7.70.581'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		КонецЕсли;
	КонецЕсли;
	
	Возврат Результат;
КонецФункции

&НаКлиенте
Функция ПолучитьФайлДанных(v7)
	
	мПустаяСтрока = "";
	
	Попытка
		ИдентификаторКонфигурации = v7.глИдентификаторКонфигурации();
		НомерРелизаКонфигурации = v7.Константа.НомерРелиза;
	Исключение
		Перерисовать(1);
		ТекстСообщения = Нстр("ru = 'Производится перенос данных из конфигурации, для которой не предусмотрена конвертация'");
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		ЗафиксироватьОшибку(ЭтаФорма, ТекстСообщения, НСтр("ru = 'Перенос из выбранной конфигурации не поддерживается.'"));
		Ошибка = Истина;
		Возврат мПустаяСтрока;
	КонецПопытки;
	
	Если ЗначениеЗаполнено(ИдентификаторКонфигурации)
		И НомерРелизаКонфигурации <> Неопределено Тогда
		
		Если ИдентификаторКонфигурации = "BU42TK" Тогда
			ИмяКонвертацияОбработка = "ACC_ert";				
			ИмяКонвертацияПравила   = "ACC_xml";
		ИначеЕсли ИдентификаторКонфигурации = "BASUOR" Тогда
			ИмяКонвертацияОбработка = "USN_ert";				
			ИмяКонвертацияПравила   = "USN_xml";
		ИначеЕсли ИдентификаторКонфигурации = "PBOUL" Тогда
			ИмяКонвертацияОбработка = "IP_ert";				
			ИмяКонвертацияПравила   = "IP_xml";
		Иначе
			Перерисовать(1);
			ТекстСообщения = Нстр("ru = 'Для выбранной конфигурации конвертация не поддерживается'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
			ЗафиксироватьОшибку(ЭтаФорма, ТекстСообщения, НСтр("ru = 'Перенос из выбранной конфигурации не поддерживается.'"));
			Ошибка = Истина;
			Возврат мПустаяСтрока;
