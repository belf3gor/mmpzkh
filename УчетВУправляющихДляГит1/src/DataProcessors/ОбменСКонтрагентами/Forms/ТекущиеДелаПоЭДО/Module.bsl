					НСтр("ru = ';%1 приглашение;;%1 приглашения;%1 приглашений;%1 приглашения'"),
					Счетчик);
			Шаблон = НСтр("ru = 'В архив отправлено %1'");
			
			ПоказатьОповещениеПользователя(НСтр("ru = 'Успешно'"),, СтрШаблон(Шаблон, Строка));
		КонецЕсли;
		
