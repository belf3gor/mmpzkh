&НаКлиенте
Процедура ПолеТабличногоДокументаФормаОтчетаВыбор(Элемент, Область, СтандартнаяОбработка)
	
	Если Область.Имя = "ОргАдрес" Тогда
		РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчете(ЭтаФорма, Область, СтандартнаяОбработка);
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтроку") > 0 Тогда
		СтандартнаяОбработка = Ложь;
		ДобавитьСтроку("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтроку") > 0 Тогда
		УдалитьСтроку("");
	ИначеЕсли (Не (Область.Защита = Истина)) И СтрНайти(Область.Имя, "_") = 14 Тогда 
		НомерСтроки = Сред(Область.Имя, 15);
		
		Если СтрНайти(Область.Имя, "П000001000101_") = 1 Тогда
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтаФорма, "ОКПД");
			ОбластьДляВвода = ПолеТабличногоДокументаФормаОтчета.Области.Найти(СтрЗаменить(Область.Имя,"П000001000101_","П000001000103_"));
			СмежнаяОбластьИмя = Область.Имя;
		ИначеЕсли СтрНайти(Область.Имя, "П000001000103_") = 1 Тогда
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтаФорма, "ОКПД");
			ОбластьДляВвода = Область;
			СмежнаяОбластьИмя = СтрЗаменить(Область.Имя,"П000001000103_","П000001000101_");
		ИначеЕсли СтрНайти(Область.Имя, "П000001000106_") = 1 Тогда
			ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтаФорма, "Причина");
			ОбластьДляВвода = Область;
			СмежнаяОбластьИмя = "";
		Иначе 
			Возврат;
		КонецЕсли;
		
		КодПоказателя = ПараметрВводаПоля.Показатель;
		КопироватьДанныеФормы(ПараметрВводаПоля.ТаблицаЗначений, ТЗВыбора);
		ВвестиПоказатель(Элемент, ОбластьДляВвода, КодПоказателя, Ложь, ПараметрВводаПоля.ТекстПриВыборе, ТЗВыбора, СтандартнаяОбработка, СмежнаяОбластьИмя);
	КонецЕсли;
	
КонецПроцедуры

