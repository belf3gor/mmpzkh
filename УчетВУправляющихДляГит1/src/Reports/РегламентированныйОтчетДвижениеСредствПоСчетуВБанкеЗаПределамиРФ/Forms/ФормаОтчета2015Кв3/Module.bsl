&НаСервере
Функция ПечатьНаСервере(ВидПечати)
	
	Если НЕ РегламентированнаяОтчетность.ПринтерДоступен() Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = НСтр("ru='Перед формированием печатных форм необходимо определить в системе принтер и задать его в качестве используемого по умолчанию!'");
		Сообщение.Сообщить();
		Возврат Ложь;
	КонецЕсли;
	
	Если ТипЗнч(мДеревоВыбранныхСтраниц) <> Тип("ДанныеФормыДерево") Тогда
		Возврат Ложь;
	КонецЕсли;
	
	СтруктураРеквизитовФормы.мПечатныеФормы.Очистить();
	
	СохранитьДанныеРаздела(СтруктураРеквизитовФормы.НаимТекущегоРаздела);
	
	СохрТаблДок = ТабличныйДокумент.ПолучитьОбласть();
	
	СтрПоля = "ПолеСверху, ПолеСправа, ПолеСнизу, ПолеСлева";
	ВремПоля = Новый Структура(СтрПоля);
	
	ЗаполнитьЗначенияСвойств(ВремПоля, ТабличныйДокумент, СтрПоля);
	
	ВывестиДанныеВТабличныйДокумент("Титульный");
	
	ВыводитьНаПечатьСправочно = Ложь;
	
	Для Каждого СтрокаУровня1 Из мДеревоВыбранныхСтраниц.ПолучитьЭлементы() Цикл
		
		Если СтрокаУровня1.ВыводНаПечать = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		СтруктураПараметров = Новый Структура;
		СтруктураПараметров.Вставить("НаименованиеЛиста",  СтрокаУровня1.Представление);
		СтруктураПараметров.Вставить("ОриентацияЛиста",    СтрокаУровня1.ОриентацияСтраницы);
		СтруктураПараметров.Вставить("ИмяСтраницы",        СтрокаУровня1.ИмяСтраницы);
		Структурапараметров.Вставить("ИмяОбластиТаблПоля", СтрокаУровня1.ИмяОбластиТабличногоПоля);
		СтруктураПараметров.Вставить("ВидПечати",          ВидПечати);
		
		Если НЕ мСтруктураМногоуровневыхРазделов.Свойство(СтрокаУровня1.ИмяСтраницы) Тогда
			ВывестиДанныеВТабличныйДокумент(СтрокаУровня1.ИмяСтраницы);
			ВывестиНаПечатьЛист(СтруктураПараметров, СтрПоля);
		Иначе
			ВывестиНаПечатьДанныеМногоуровневогоРаздела(СтруктураПараметров, СтрПоля);
		КонецЕсли;
		
		Если СтрокаУровня1.ИмяСтраницы = "Титульный" Тогда
			ВыводитьНаПечатьСправочно = Истина;
		КонецЕсли;
		
	КонецЦикла;
	
	// Вывод на печать листа "Справочно".
	Если ВыводитьНаПечатьСправочно Тогда
		СтруктураПараметров = Новый Структура;
		СтруктураПараметров.Вставить("НаименованиеЛиста",  "Подписи");
		СтруктураПараметров.Вставить("ОриентацияЛиста",    "Портрет");
		СтруктураПараметров.Вставить("ИмяСтраницы",        "Справочно");
		Структурапараметров.Вставить("ИмяОбластиТаблПоля", "ТабличныйДокумент");
		СтруктураПараметров.Вставить("ВидПечати",          ВидПечати);
		ВывестиДанныеВТабличныйДокумент("Титульный");
		ВывестиНаПечатьЛист(СтруктураПараметров, СтрПоля);
	КонецЕсли;
	
	ТабличныйДокумент.Очистить();
	ТабличныйДокумент.Вывести(СохрТаблДок);
	ЗаполнитьЗначенияСвойств(ТабличныйДокумент, ВремПоля, СтрПоля);
	
	РегламентированнаяОтчетностьКлиентСервер.ПроставлениеНомеровЛистов(ЭтаФорма, , СтруктураРеквизитовФормы.СписокПечатаемыхЛистов);
	
	КопироватьДанныеФормы(мДеревоВыбранныхСтраниц, мДеревоСтраницОтчета);
	
	Возврат Истина;
	
КонецФункции

&НаСервере
Процедура ВывестиНаПечатьДанныеМногоуровневогоРаздела(СтруктураПараметров, СтрПоля)
	
	ИмяТекРаздела = СтруктураПараметров.ИмяСтраницы;
	
	КолУровнейРаздела = мСтруктураМногоуровневыхРазделов.Свойство(ИмяТекРаздела);
	
	ДеревоДанныхРаздела = ПолучитьИзВременногоХранилища(
	СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяТекРаздела]);
	
	Если ИмяТекРаздела = "ДвижениеСредств" Тогда
		
		ИмяМакетаМЧБ = "ПечатныйБланк2015Кв3_ДвижениеСредств";
		
		МакетМЧБ = ОбъектОтчета(ЭтаФорма.ИмяФормы).ПолучитьМакет(ИмяМакетаМЧБ);
		
		ТД_ОснЧасть = МакетМЧБ.ПолучитьОбласть("ОснЧасть");
		ТД_Преемник = МакетМЧБ.ПолучитьОбласть("Преемник");
		
		ТД_МнЧасть1  = МакетМЧБ.ПолучитьОбласть("МнЧасть1_1");
		ТД_МнЧасть2  = МакетМЧБ.ПолучитьОбласть("МнЧасть2_1");
		ТД_МнЧасть21 = МакетМЧБ.ПолучитьОбласть("МнЧасть21_1");
		ТД_МнЧасть3  = МакетМЧБ.ПолучитьОбласть("МнЧасть3_1");
		ТД_МнЧасть31 = МакетМЧБ.ПолучитьОбласть("МнЧасть31_1");
		ТД_МнЧасть4  = МакетМЧБ.ПолучитьОбласть("МнЧасть4_1");
		
		ТабличныйДокумент.Очистить();
		
		ТабличныйДокумент.ПолеСверху = 5;
		ТабличныйДокумент.ПолеСправа = 5;
		ТабличныйДокумент.ПолеСнизу  = 5;
		ТабличныйДокумент.ПолеСлева  = 5;
		
		ТабличныйДокумент.АвтоМасштаб = Истина;
		
		ТабличныйДокумент.Вывести(ТД_ОснЧасть);
		ТабличныйДокумент.Вывести(ТД_Преемник);
		
		ИндМнЧ_21 = 1;
		ИндМнЧ_31 = 1;
		
		Для НомСтрокиВДереве = 1 По ДеревоДанныхРаздела.Строки.Количество() Цикл
			
			Ветка = ДеревоДанныхРаздела.Строки[НомСтрокиВДереве - 1];
			
			НомСтрокиВДеревеСтр = Формат(НомСтрокиВДереве, "ЧГ=");
			
			// Добавление дополнительных строк 1.
			Для каждого Обл Из ТД_МнЧасть1.Области Цикл
				ПозИнд = СтрНайти(Обл.Имя, "_");
				Если ПозИнд > 0 Тогда
					Обл.Имя = Лев(Обл.Имя, ПозИнд) + НомСтрокиВДеревеСтр;
				КонецЕсли;
			КонецЦикла;
			ВставитьОбластьВТабличныйДокументПриПечати(ТД_МнЧасть1, "Преемник", МакетМЧБ, СтруктураПараметров);
			// Вывод данных в строки 1.
			Обл = ТабличныйДокумент.Области["П0000104_" + НомСтрокиВДеревеСтр];
			Обл.Текст = ?(Ветка.Данные["П0000104"] = 0, "-", Ветка.Данные["П0000104"]);
			Обл = ТабличныйДокумент.Области["П0000105_" + НомСтрокиВДеревеСтр];
			Обл.Текст = Ветка.Данные["КодВалюты"];
			
			// Добавление дополнительных строк 2.
			Для каждого Обл Из ТД_МнЧасть2.Области Цикл
				ПозИнд = СтрНайти(Обл.Имя, "_");
				Если ПозИнд > 0 Тогда
					Обл.Имя = Лев(Обл.Имя, ПозИнд) + НомСтрокиВДеревеСтр;
