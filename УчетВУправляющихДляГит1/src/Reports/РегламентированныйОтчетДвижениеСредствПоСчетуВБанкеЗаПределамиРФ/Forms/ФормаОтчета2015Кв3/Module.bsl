&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяРаздела = "", ОбластьИмя = "") Экспорт
	
	Перем ТаблицаБлока;
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Если ИмяРаздела = "ДвижениеСредств" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				Если СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П0000204,
					Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы)) > 0 Тогда
					Сумма = 0;
					Ном = 1;
					Пока Форма.ТабличныйДокумент.Области.Найти("П0002104_" + Формат(Ном, "ЧГ=")) <> Неопределено Цикл
						Сумма = Сумма + Форма.ТабличныйДокумент.Области["П0002104_" + Формат(Ном, "ЧГ=")].Значение;
						Ном = Ном + 1;
					КонецЦикла;
					Форма.ТабличныйДокумент.Области["П0000204"].Значение = Сумма;
				КонецЕсли;
				
				Если СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П0000304,
					Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы)) > 0 Тогда
					Сумма = 0;
					Ном = 1;
					Пока Форма.ТабличныйДокумент.Области.Найти("П0003104_" + Формат(Ном, "ЧГ=")) <> Неопределено Цикл
						Сумма = Сумма + Форма.ТабличныйДокумент.Области["П0003104_" + Формат(Ном, "ЧГ=")].Значение;
						Ном = Ном + 1;
					КонецЦикла;
					Форма.ТабличныйДокумент.Области["П0000304"].Значение = Сумма;
				КонецЕсли;
				
				Если СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П0000404,
					Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы)) > 0 Тогда
					Форма.ТабличныйДокумент.Области["П0000404"].Значение
						= Форма.ТабличныйДокумент.Области["П0000104"].Значение
						+ Форма.ТабличныйДокумент.Области["П0000204"].Значение
						- Форма.ТабличныйДокумент.Области["П0000304"].Значение;
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
				
			КонецЕсли;
			
		Иначе
			
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
			
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "" Тогда
		
		Расчет(Форма, "ДвижениеСредств");
		
	КонецЕсли;
	
	Форма.Модифицированность = Истина;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура РасчетВДеревеЗначений(Форма, ИмяРаздела)
	
	Если ИмяРаздела = "ДвижениеСредств" Тогда
		
		ДеревоДанных = ПолучитьИзВременногоХранилища(
			Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяРаздела]);
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			АктивнаяВетка = ДеревоДанных.Строки[
				Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[0] - 1];
		КонецЕсли;
		
		Для каждого Ветка Из ДеревоДанных.Строки Цикл
			
			Если Ветка = АктивнаяВетка Тогда
				Ветка.Данные.П0000104 = Форма.ТабличныйДокумент.Области["П0000104"].Значение;
				
				ДанныеМнЧ_П00021 = Ветка.ДанныеМногострочныхЧастей.П00021.Строки;
				Для каждого Ветка_П00021 Из ДанныеМнЧ_П00021 Цикл
					Ветка_П00021.Данные.Вставить("П0002104", Форма.ТабличныйДокумент.Области["П0002104_"
						+ Формат(ДанныеМнЧ_П00021.Индекс(Ветка_П00021) + 1, "ЧГ=")].Значение);
				КонецЦикла;
				
				ДанныеМнЧ_П00031 = Ветка.ДанныеМногострочныхЧастей.П00031.Строки;
				Для каждого Ветка_П00031 Из ДанныеМнЧ_П00031 Цикл
					Ветка_П00031.Данные.Вставить("П0003104", Форма.ТабличныйДокумент.Области["П0003104_"
						+ Формат(ДанныеМнЧ_П00031.Индекс(Ветка_П00031) + 1, "ЧГ=")].Значение);
				КонецЦикла;
			КонецЕсли;
			
			Сумма = 0;
			ДанныеМнЧ_П00021 = Ветка.ДанныеМногострочныхЧастей.П00021.Строки;
			Для каждого Ветка_П00021 Из ДанныеМнЧ_П00021 Цикл
				Сумма = Сумма + Ветка_П00021.Данные["П0002104"];
			КонецЦикла;
			Ветка.Данные["П0000204"] = Сумма;
			
			Сумма = 0;
			ДанныеМнЧ_П00031 = Ветка.ДанныеМногострочныхЧастей.П00031.Строки;
			Для каждого Ветка_П00031 Из ДанныеМнЧ_П00031 Цикл
				Сумма = Сумма + Ветка_П00031.Данные["П0003104"];
			КонецЦикла;
			Ветка.Данные["П0000304"] = Сумма;
			
			Ветка.Данные["П0000404"]
				= Ветка.Данные["П0000104"]
				+ Ветка.Данные["П0000204"]
				- Ветка.Данные["П0000304"];
			
			Если Ветка = АктивнаяВетка Тогда
				Форма.ТабличныйДокумент.Области["П0000204"].Значение = Ветка.Данные["П0000204"];
				Форма.ТабличныйДокумент.Области["П0000304"].Значение = Ветка.Данные["П0000304"];
				Форма.ТабличныйДокумент.Области["П0000404"].Значение = Ветка.Данные["П0000404"];
			КонецЕсли;
			
		КонецЦикла;
		
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяРаздела]
			= ПоместитьВоВременноеХранилище(ДеревоДанных, Форма.УникальныйИдентификатор);
		
	КонецЕсли;
	
КонецПроцедуры

