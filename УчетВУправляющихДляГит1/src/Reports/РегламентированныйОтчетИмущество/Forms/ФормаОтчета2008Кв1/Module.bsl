					ИначеЕсли Эл.Код <> "СтоимМес" Тогда
						ЗадатьЗначениеЭлемента(ДанРас, Эл.Код, ДанныеРаздела2[Эл.Ключ]);
					КонецЕсли;
				КонецЦикла;
				
				СтоимМес = ПолучитьПодчиненныйЭлемент(ДанРас, "СтоимМес");
				Для Инд = 1 По 12 Цикл
					ОстСтоим = ПолучитьПодчиненныйЭлемент(СтоимМес, "ОстСтом01" + Формат(Инд, "ЧЦ=2; ЧВН="));
					Для Каждого Эл Из ОстСтоим.Строки Цикл
						ЗадатьЗначениеЭлемента(ОстСтоим, Эл.Код, ДанныеРаздела2[Эл.Ключ]);
					КонецЦикла;
				КонецЦикла;
				
				ОстСтоим = ПолучитьПодчиненныйЭлемент(СтоимМес, "ОстСтом3112");
				Для Каждого Эл Из ОстСтоим.Строки Цикл
					ЗадатьЗначениеЭлемента(ОстСтоим, Эл.Код, ДанныеРаздела2[Эл.Ключ]);
				КонецЦикла;
				
				НалПер = ПолучитьПодчиненныйЭлемент(УзелРаздел2, "НалПер");
				Для Каждого Эл Из НалПер.Строки Цикл
					ЗадатьЗначениеЭлемента(НалПер, Эл.Код, ДанныеРаздела2[Эл.Ключ]);
				КонецЦикла;
				
			КонецЦикла;
			
			// данные раздела 3 заполняем только для записей раздела 1 с КБК, не относящемуся к ЕСГС
			Если КБК = СоответствиеКодаВидаИмуществаКБК["1"] Тогда
				Продолжить;
			КонецЕсли;
			
			// выгружаем данные раздела 3
			РасОБНедИО = ПолучитьПодчиненныйЭлемент(УзелРаздел1, "РасОБНедИО");
			РасОб = ПолучитьПодчиненныйЭлемент(РасОбНедИО, "РасОб");
			Для Каждого ЛистРаздела3 Из Раздел3 Цикл
				
				ДанныеРаздела3 = ЛистРаздела3.Данные[0].Значение;;
				
				Если ОКАТО <> СокрЛП(ДанныеРаздела3.П000030001000) Тогда
					Продолжить;
				КонецЕсли;
				
				УзелРаздел3 = СкопироватьУзел(РасОБНедИО, РасОб);
				
				ДанРас = ПолучитьПодчиненныйЭлемент(УзелРаздел3, "ДанРас");
				Для Каждого Эл Из ДанРас.Строки Цикл
					Если Эл.Код = "ДолСт" ИЛИ Эл.Код = "КоэфК" Тогда
						ЧислительДроби = ДанныеРаздела3[Эл.Ключ + "_Числ"];
						ЗнаменательДроби = ДанныеРаздела3[Эл.Ключ + "_Знам"];
						Если ЗначениеЗаполнено(ЧислительДроби) И ЗначениеЗаполнено(ЗнаменательДроби) Тогда
							ЗадатьЗначениеЭлемента(ДанРас, Эл.Код, СокрЛП(Формат(ЧислительДроби, "ЧГ=") + "/" + Формат(ЗнаменательДроби, "ЧГ=")));
						КонецЕсли;
					Иначе
						ЗадатьЗначениеЭлемента(ДанРас, Эл.Код, ДанныеРаздела3[Эл.Ключ]);
					КонецЕсли;
				КонецЦикла;
				
				НалПер = ПолучитьПодчиненныйЭлемент(УзелРаздел3, "НалПер");
				Для Каждого Эл Из НалПер.Строки Цикл
					ЗадатьЗначениеЭлемента(НалПер, Эл.Код, ДанныеРаздела3[Эл.Ключ]);
				КонецЦикла;
				
			КонецЦикла;
			
		КонецЦикла;
		
	КонецЦикла;
	
