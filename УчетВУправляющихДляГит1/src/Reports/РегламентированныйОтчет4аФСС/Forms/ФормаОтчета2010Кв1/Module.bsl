&НаКлиенте
Процедура ТабличныйДокументВыбор(Элемент, Область, СтандартнаяОбработка)
	
	Если Элементы.РазделыОтчета.ТекущиеДанные = Неопределено Тогда
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю("Не выбран заполняемый раздел отчета");
		СтандартнаяОбработка = Ложь;
		Возврат;
	КонецЕсли;
	
	Если РегламентированнаяОтчетностьКлиент.ВыбраннаяОбластьРегламентированногоОтчетаНеВерна(ЭтаФорма, Область, СтандартнаяОбработка) Тогда
		Возврат;
	КонецЕсли;

	ОбластьИмя = Область.Имя;
	
	Если ОбластьИмя = "МестоЖительства" Тогда
		
		Если НЕ СтруктураРеквизитовФормы.мАвтоВыборКодов Тогда
			
			СтандартнаяОбработка = Ложь;
			
			ПредставлениеАдреса = Область.Значение;
			ЗначенияПолей = ПреобразоватьПредставлениеАдреса(?(ПустаяСтрока(СтруктураРеквизитовФормы.мМестоЖительства), ПредставлениеАдреса, СтруктураРеквизитовФормы.мМестоЖительства));
			
			ПараметрыФормы = Новый Структура;
			ПараметрыФормы.Вставить("Заголовок",               "Ввод адреса");
			ПараметрыФормы.Вставить("ЗначенияПолей", 		   ЗначенияПолей);
			ПараметрыФормы.Вставить("Представление", 		   ПредставлениеАдреса);
			ПараметрыФормы.Вставить("ВидКонтактнойИнформации", СтруктураРеквизитовФормы.СправочникиВидыКонтактнойИнформацииФактАдресОрганизации);
			
			ДополнительныеПараметры = Новый Структура;
			ДополнительныеПараметры.Вставить("Область", Область);
			
			ТипЗначения = Тип("ОписаниеОповещения");
			ПараметрыКонструктора = Новый Массив(3);
			ПараметрыКонструктора[0] = "ОткрытьФормуКонтактнойИнформацииЗавершение";
			ПараметрыКонструктора[1] = ЭтаФорма;
			ПараметрыКонструктора[2] = ДополнительныеПараметры;
			
			Оповещение = Новый (ТипЗначения, ПараметрыКонструктора);
			
			ОбщегоНазначенияКлиент.ОбщийМодуль("УправлениеКонтактнойИнформациейКлиент").ОткрытьФормуКонтактнойИнформации(ПараметрыФормы, , Оповещение);
			
		Иначе
			
			СтруктураРеквизитовФормы.мМестоЖительства = "";
			
		КонецЕсли;
		
	ИначеЕсли СтрНайти(ОбластьИмя, "КодПодчиненности") > 0 Тогда
		
		СтандартнаяОбработка = Ложь;
		
		ДополнительныйКод = "";
		Для Ном = 1 По 5 Цикл
			ЧастьДополнительногоКода = СокрЛП(РегламентированнаяОтчетностьКлиентСервер.ВернутьЗначениеПараметраСЛиста(
				ЭтаФорма, "Титульный", "КодПодчиненности_" + Формат(Ном, "ЧН=0; ЧГ=")));
			ДополнительныйКод = ДополнительныйКод + ЧастьДополнительногоКода;
		КонецЦикла;
		
		ДополнительныеПараметры = Новый Структура("Область, ДополнительныйКод", Область, ДополнительныйКод);
		ВвестиСтрокуКодПодчиненностиПродолжение(ДополнительныеПараметры);
		
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ВвестиСтрокуКодПодчиненностиЗавершение(Строка, ДополнительныеПараметры) Экспорт
	
	Если Строка = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Строка = СтрЗаменить(Строка, " ", "");
	
	НайденСимволОтличныйОт0_9 = Ложь;
	Для НомСимвола = 1 По СтрДлина(Строка) Цикл
		Если СтрНайти("0123456789", Сред(Строка, НомСимвола, 1)) = 0 Тогда
			// Найден символ, не являющийся строковым представлением литерала численного типа.
			НайденСимволОтличныйОт0_9 = Истина;
			Прервать;
		КонецЕсли;
	КонецЦикла;
	
	ТекстПредупреждения = "";
	Если ЗначениеЗаполнено(Строка) Тогда
		Если СтрДлина(Строка) <> 5 ИЛИ НайденСимволОтличныйОт0_9 Тогда
			ТекстПредупреждения = НСтр("ru = 'Код подчиненности должен состоять из 5 цифр!'");
		Иначе
			ПоследнийСимвол = Прав(Строка, 1);
			Если НЕ (ПоследнийСимвол = "1" ИЛИ ПоследнийСимвол = "2" ИЛИ ПоследнийСимвол = "3") Тогда
				ТекстПредупреждения = НСтр("ru = 'Код подчиненности должен заканчиваться на цифру 1, 2 или 3!'");
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ТекстПредупреждения) Тогда
		ДополнительныеПараметры.ДополнительныйКод = Строка;
		ОписаниеОповещения = Новый ОписаниеОповещения("ВвестиСтрокуКодПодчиненностиПродолжение", ЭтотОбъект, ДополнительныеПараметры);
		ПоказатьПредупреждение(ОписаниеОповещения, ТекстПредупреждения);
		Возврат;
	Иначе
		РегламентированнаяОтчетностьКлиентСервер.ПроставитьВКвадратыЗначения(ЭтаФорма, "Титульный", "КодПодчиненности_", 5, Строка, Ложь, Ложь);
		Модифицированность = Истина;
	КонецЕсли;
	
КонецПроцедуры

