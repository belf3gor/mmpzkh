Процедура ОткрытьФормуВыбораВалютыЗавершение(Результат, ДополнительныеПараметры) Экспорт
	
	Область = ДополнительныеПараметры.Область;
	
	Если Результат <> Неопределено Тогда
		
		КодВалюты = КодСправочника(Результат);
		
		ПредКодВалюты = СокрЛП(Область.Значение);
		
		Если Область.Значение = КодВалюты Тогда
			Область.Очистить();
		Иначе
			Область.Значение = КодВалюты;
		КонецЕсли;
		
		Если ПредКодВалюты = "643" Тогда
			Постфикс = Сред(Область.Имя, 15);
			Если СтрНачинаетсяС(Область.Имя, "П00002М222003") Тогда
				Обл = ТабличныйДокумент.Области.Найти("П00002М223003_" + Постфикс);
				Если Обл <> Неопределено Тогда
					Обл.Очистить();
				КонецЕсли;
				Обл = ТабличныйДокумент.Области.Найти("П00002М224003_" + Постфикс);
				Если Обл <> Неопределено Тогда
					Обл.Очистить();
				КонецЕсли;
			ИначеЕсли СтрНачинаетсяС(Область.Имя, "П00003М232003") Тогда
				Обл = ТабличныйДокумент.Области.Найти("П00003М233003_" + Постфикс);
				Если Обл <> Неопределено Тогда
					Обл.Очистить();
				КонецЕсли;
				Обл = ТабличныйДокумент.Области.Найти("П00003М234003_" + Постфикс);
				Если Обл <> Неопределено Тогда
					Обл.Очистить();
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
		
		УстановитьДоступностьОбластей(ЭтаФорма, СтруктураРеквизитовФормы.НаимТекущегоРаздела);
		
		РасчетНаКлиенте(СтруктураРеквизитовФормы.НаимТекущегоРаздела, Область.Имя);
		
		Модифицированность = Истина;
		
	КонецЕсли;
	
КонецПроцедуры

