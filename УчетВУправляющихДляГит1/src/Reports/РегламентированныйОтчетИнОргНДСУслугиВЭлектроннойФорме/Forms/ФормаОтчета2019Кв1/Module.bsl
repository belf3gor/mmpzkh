Функция ПроверитьВозможностьВыгрузки(ПараметрыВыгрузки, ДеревоВыгрузки)
	
	СтатусПроверки = Истина;
	
	СохрСтруктура = СохраненныеДанныеОтчета();
	
	ВозможныеКодыПериода = СтрРазделить("21,22,23,24", ",", Ложь);
	
	// Титульный лист.
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.ИННОрг) Тогда
		СообщитьВТС("Не задан ИНН налогоплательщика", "Титульный", "ИНН");
		СтатусПроверки = Ложь;
	ИначеЕсли СтрДлина(ПараметрыВыгрузки.ИННОрг) <> 10 Тогда
		СообщитьВТС("Задан ИНН налогоплательщика, не состоящий из 10 цифр", "Титульный", "ИНН");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.КПП) Тогда
		СообщитьВТС("Не задан КПП налогоплательщика", "Титульный", "КПП");
		СтатусПроверки = Ложь;
	ИначеЕсли СтрДлина(ПараметрыВыгрузки.КПП) <> 9 Тогда
		СообщитьВТС("Задан КПП налогоплательщика, не состоящий из 9 символов", "Титульный", "КПП");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.НаимОрг) Тогда
		СообщитьВТС("Не задано наименование налогоплательщика", "Титульный", "НаимОрг");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.Период) Тогда
		СообщитьВТС("Не задан код налогового периода", "Титульный", "Период");
		СтатусПроверки = Ложь;
	ИначеЕсли ВозможныеКодыПериода.Найти(ПараметрыВыгрузки.Период) = Неопределено Тогда
		СообщитьВТС("Задан некорректный код налогового периода", "Титульный", "Период");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.КодНО) Тогда
		СообщитьВТС("Не задан код налогового органа", "Титульный", "НалоговыйОрган");
		СтатусПроверки = Ложь;
	ИначеЕсли ПараметрыВыгрузки.КодНО <> "9977" Тогда
		СообщитьВТС("Задано некорректное значение кода налогового органа. Возможно значение 9977",
		"Титульный", "НалоговыйОрган");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.КодСтраны) Тогда
		СообщитьВТС("Не задан код страны", "Титульный", "КодСтраны");
		СтатусПроверки = Ложь;
	ИначеЕсли СтрДлина(ПараметрыВыгрузки.КодСтраны) <> 3 Тогда
		СообщитьВТС("Задан код страны, не состоящий из 3 цифр", "Титульный", "КодСтраны");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.ФамилияПодписанта) Тогда
		СообщитьВТС("Не задана фамилия подписанта", "Титульный", "ОргПодписант");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.ИмяПодписанта) Тогда
		СообщитьВТС("Не задано имя подписанта", "Титульный", "ОргПодписант");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если ПараметрыВыгрузки.ПрПодп = "2" И НЕ ЗначениеЗаполнено(ПараметрыВыгрузки.НаимДокПред) Тогда
		СообщитьВТС("Не заданы наименование и реквизиты документа, подтверждающего полномочия представителя",
		"Титульный", "ДокУпПред");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	// Раздел 1.
	//
	Ветка = СохрСтруктура.ДанныеМногоуровневыхРазделов["Раздел1"].Строки[0];
	
	ЗначПок = СокрЛП(Ветка.Данные["П000010010003"]);
	Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
		СообщитьВТС("В разделе 1 не задан код по ОКТМО", "Раздел1", "П000010010003", "1");
		СтатусПроверки = Ложь;
	ИначеЕсли ЗначПок <> "45348000" Тогда
		СообщитьВТС("В разделе 1 код по ОКТМО должен принимать значение 45348000", "Раздел1", "П000010010003", "1");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	ЗначПок = СокрЛП(Ветка.Данные["П000010011003"]);
	Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
		СообщитьВТС("В разделе 1 не задан код бюджетной классификации", "Раздел1", "П000010011003", "1");
		СтатусПроверки = Ложь;
	ИначеЕсли ЗначПок <> "18210301000011000110" Тогда
		СообщитьВТС("В разделе 1 код бюджетной классификации должен принимать значение 18210301000011000110",
		"Раздел1", "П000010011003", "1");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	// Раздел 2.
	//
	ДеревоРаздела = СохрСтруктура.ДанныеМногоуровневыхРазделов["Раздел2"];
	ЗаполненРаздел2 = ЗаполненРаздел(ДеревоРаздела, "Раздел2");
	
	Если ЗаполненРаздел2 Тогда
		
		ВозмПризнакиИнОрг  = ВозможныеЗначенияИзСпискаВыбораПоказателя("П000020020003");
		ВозмКодыВидаУслуги = ВозможныеЗначенияИзСпискаВыбораПоказателя("П00002М120503");
		
		Для каждого Ветка Из ДеревоРаздела.Строки Цикл
			
			НомСтраницы = Формат(ДеревоРаздела.Строки.Индекс(Ветка) + 1, "ЧГ=");
			
			ЗначПок = СокрЛП(Ветка.Данные["П000020020003"]);
			Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
				СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы + ": не задан признак иностранной организации",
				"Раздел2", "П000020020003", НомСтраницы);
				СтатусПроверки = Ложь;
			ИначеЕсли ВозмПризнакиИнОрг.МассивЗначений.Найти(ЗначПок) = Неопределено Тогда
				СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы
				+ ": признак иностранной организации должен принимать одно из значений: " + ВозмПризнакиИнОрг.СтрокаЗначений,
				"Раздел2", "П000020020003", НомСтраницы);
				СтатусПроверки = Ложь;
			КонецЕсли;
			
			ДанныеМнЧ = Ветка.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппыР2М1];
			КолСтрокМнЧ = ДанныеМнЧ.Строки.Количество();
			Для каждого СтрокаМнЧ Из ДанныеМнЧ.Строки Цикл
				
				ИндСтрокиМнЧ = ДанныеМнЧ.Строки.Индекс(СтрокаМнЧ);
				НомСтроки = Формат(ИндСтрокиМнЧ + 1, "ЧГ=");
				Текст_СтрокаГруппыСтрок = ?(КолСтрокМнЧ = 1, "", "в строке " + НомСтроки + " группы строк 205-260 ");
				
				ЗначПок = СокрЛП(СтрокаМнЧ.Данные["П00002М120503"]);
				Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
					СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы + ": " + Текст_СтрокаГруппыСтрок
					+ "не задан код вида оказанной услуги", "Раздел2", "П00002М120503_" + НомСтроки, НомСтраницы);
					СтатусПроверки = Ложь;
				ИначеЕсли ВозмКодыВидаУслуги.МассивЗначений.Найти(ЗначПок) = Неопределено Тогда
					СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы + ": " + Текст_СтрокаГруппыСтрок
					+ "код вида оказанной услуги должен принимать одно из значений: "
					+ ВозмКодыВидаУслуги.СтрокаЗначений, "Раздел2", "П00002М120503_" + НомСтроки, НомСтраницы);
					СтатусПроверки = Ложь;
				КонецЕсли;
				
				ЗначПок = СтрокаМнЧ.Данные["П00002М125003"];
				Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
					СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы + ": " + Текст_СтрокаГруппыСтрок
					+ "не задана расчетная налоговая ставка", "Раздел2", "П00002М125003_" + НомСтроки, НомСтраницы);
					СтатусПроверки = Ложь;
				ИначеЕсли ЗначПок <> 15.25 И ЗначПок <> 16.67 Тогда
					СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы + ": " + Текст_СтрокаГруппыСтрок
					+ "расчетная налоговая ставка должна принимать одно из значений: 15,25 или 16,67",
					"Раздел2", "П00002М125003_" + НомСтроки, НомСтраницы);
					СтатусПроверки = Ложь;
				КонецЕсли;
				
				ДанныеПодчМнЧ = СтрокаМнЧ.ДанныеМногострочныхЧастей[СтруктураРеквизитовФормы.мИдГруппыР2М2];
				КолСтрокПодчМнЧ = ДанныеПодчМнЧ.Строки.Количество();
				Для каждого СтрокаПодчМнЧ Из ДанныеПодчМнЧ.Строки Цикл
					
					ИндСтрокиПодчМнЧ = ДанныеПодчМнЧ.Строки.Индекс(СтрокаПодчМнЧ);
					НомПодчСтроки = Формат(ИндСтрокиПодчМнЧ + 1, "ЧГ=");
					Текст_СтрокаГруппыПодчСтрок = ?(КолСтрокПодчМнЧ = 1, "", "в строке " + НомПодчСтроки + " группы строк 210-240 ");
					
					ЗначПок = СокрЛП(СтрокаПодчМнЧ.Данные["П00002М222003"]);
					Если НЕ ЗначениеЗаполнено(ЗначПок) Тогда
						СообщитьВТС("Раздел 2 -> Страница " + НомСтраницы + ": " + Текст_СтрокаГруппыСтрок + "не задан код валюты "
						+ Текст_СтрокаГруппыПодчСтрок, "Раздел2", "П00002М222003_" + НомСтроки + "_" + НомПодчСтроки, НомСтраницы);
						СтатусПроверки = Ложь;
					КонецЕсли;
					
				КонецЦикла;
				
			КонецЦикла;
			
		КонецЦикла;
		
	КонецЕсли;
	
	// Раздел 3.
	//
	ДеревоРаздела = СохрСтруктура.ДанныеМногоуровневыхРазделов["Раздел3"];
	ЗаполненРаздел3 = ЗаполненРаздел(ДеревоРаздела, "Раздел3");
	
	Если ЗаполненРаздел3 Тогда
		
		ВозмПризнакиИнОрг  = ВозможныеЗначенияИзСпискаВыбораПоказателя("П000030030003");
