					РегламентированнаяОтчетностьКлиентСервер.УстановитьИндекс(ИндексПодч, ИндексПодчСтр);
					Обл240 = Форма.ТабличныйДокумент.Области.Найти("П00002М224003_" + ИндексСтр + "_" + ИндексПодчСтр);
					Пока Обл240 <> Неопределено Цикл
						Обл220 = Форма.ТабличныйДокумент.Области.Найти("П00002М222003_" + ИндексСтр + "_" + ИндексПодчСтр);
						Если Обл220 <> Неопределено И СокрЛП(Обл220.Значение) = "643" Тогда
							Обл230 = Форма.ТабличныйДокумент.Области.Найти("П00002М223003_" + ИндексСтр + "_" + ИндексПодчСтр);
							Если Обл230 <> Неопределено Тогда
								Обл230.Значение = 1;
							КонецЕсли;
							Обл210 = Форма.ТабличныйДокумент.Области.Найти("П00002М221003_" + ИндексСтр + "_" + ИндексПодчСтр);
							Если Обл210 <> Неопределено Тогда
								Обл240.Значение = Обл210.Значение;
							КонецЕсли;
						КонецЕсли;
						Сумма245 = Сумма245 + Обл240.Значение;
						РегламентированнаяОтчетностьКлиентСервер.УвеличитьИндекс(ИндексПодч, ИндексПодчСтр);
						Обл240 = Форма.ТабличныйДокумент.Области.Найти("П00002М224003_" + ИндексСтр + "_" + ИндексПодчСтр);
					КонецЦикла;
					Обл245.Значение = Сумма245;
					
					Обл250 = Форма.ТабличныйДокумент.Области.Найти("П00002М125003_" + ИндексСтр);
					Обл260 = Форма.ТабличныйДокумент.Области.Найти("П00002М126003_" + ИндексСтр);
					Если Обл250 <> Неопределено И Обл260 <> Неопределено Тогда
						Обл260.Значение = Окр(Сумма245 * Обл250.Значение / 100);
					КонецЕсли;
					
					РегламентированнаяОтчетностьКлиентСервер.УвеличитьИндекс(Индекс, ИндексСтр);
					Обл245 = Форма.ТабличныйДокумент.Области.Найти("П00002М124503_" + ИндексСтр);
					
				КонецЦикла;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
