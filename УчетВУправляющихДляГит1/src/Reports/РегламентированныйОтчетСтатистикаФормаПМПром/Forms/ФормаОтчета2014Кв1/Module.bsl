		Для Каждого СтрокаПравойЧасти Из СтрокаПравил.ПраваяЧасть Цикл
			НоваяСтрока = ПроверяемыеОперанды.Добавить();
			НоваяСтрока.КодПравила = СтрокаПравил.КодПравила;
			НоваяСтрока.Операнд = СтрокаПравойЧасти.Операнд;
		КонецЦикла;
	КонецЦикла;
	
	Отбор = Новый Структура();
	ОтборСтрок = Новый Структура();
	
	Для НомСтроки = 0 По ЭтаФорма["П0020001001"].Количество() - 1 Цикл
	
		СтрокаМнЧ = ЭтаФорма["П0020001001"][НомСтроки];
		
		Отбор.Вставить("Операнд", СтрокаМнЧ[СтруктураРеквизитовФормы.мИдГруппы1+"04"]);
		КодыПравилПроверки = ПроверяемыеОперанды.НайтиСтроки(Отбор);
		
		Значение01 = СтрокаМнЧ[СтруктураРеквизитовФормы.мИдГруппы1+"01"];
		Значение05 = СтрокаМнЧ[СтруктураРеквизитовФормы.мИдГруппы1+"05"];
		Значение06 = СтрокаМнЧ[СтруктураРеквизитовФормы.мИдГруппы1+"06"];
		Значение07 = СтрокаМнЧ[СтруктураРеквизитовФормы.мИдГруппы1+"07"];
		
		Если (НЕ ЗначениеЗаполнено(Значение01)) И ((Значение05 <> 0) ИЛИ (Значение06 <> 0) ИЛИ (Значение07 <> 0)) Тогда
			
			ТекстСообщения = "Не выбрана продукция при заполненных показателях!";
			РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, ТекстСообщения, "Раздел1", СтруктураРеквизитовФормы.мИдГруппы1 + "01_" + Формат(НомСтроки + 1, "ЧГ="));
			СтатусПроверкиКС = Ложь;
			
			Продолжить;
			
		КонецЕсли;
		
		Если КодыПравилПроверки.Количество() = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		Для Каждого СтрокаКодаПравила Из КодыПравилПроверки Цикл
			
			ПравилоПроверки = КонтрольныеСоотношения.Найти(СтрокаКодаПравила.КодПравила, "КодПравила");
			
			ЛевоеЗначение05		= 0;
			ЛевоеЗначение06		= 0;
			ЛевоеЗначение07		= 0;
			ПравоеЗначение05	= 0;
			ПравоеЗначение06	= 0;
			ПравоеЗначение07	= 0;
			
			ОтборСтрок.Вставить(СтруктураРеквизитовФормы.мИдГруппы1+"04", ПравилоПроверки.ЛеваяЧасть);
			МассивСтрокДанных = ЭтаФорма["П0020001001"].НайтиСтроки(ОтборСтрок);
			
			Для Каждого СтрокаДанных Из МассивСтрокДанных Цикл
				
				ЛевоеЗначение05	= ЛевоеЗначение05 + СтрокаДанных[СтруктураРеквизитовФормы.мИдГруппы1+"05"];
				ЛевоеЗначение06	= ЛевоеЗначение06 + СтрокаДанных[СтруктураРеквизитовФормы.мИдГруппы1+"06"];
				ЛевоеЗначение07	= ЛевоеЗначение07 + СтрокаДанных[СтруктураРеквизитовФормы.мИдГруппы1+"07"];
				
			КонецЦикла;
			
			Для Каждого ОперандПравойЧасти Из ПравилоПроверки.ПраваяЧасть Цикл
				
				ОтборСтрок.Очистить();
				ОтборСтрок.Вставить(СтруктураРеквизитовФормы.мИдГруппы1+"04", ОперандПравойЧасти.Операнд);
				МассивСтрокДанных = ЭтаФорма["П0020001001"].НайтиСтроки(ОтборСтрок);
				
				Для Каждого СтрокаДанных Из МассивСтрокДанных Цикл
					
					ПравоеЗначение05 = ПравоеЗначение05	+ СтрокаДанных[СтруктураРеквизитовФормы.мИдГруппы1+"05"] * ОперандПравойЧасти.Множитель;
					ПравоеЗначение06 = ПравоеЗначение06	+ СтрокаДанных[СтруктураРеквизитовФормы.мИдГруппы1+"06"] * ОперандПравойЧасти.Множитель;
					ПравоеЗначение07 = ПравоеЗначение07	+ СтрокаДанных[СтруктураРеквизитовФормы.мИдГруппы1+"07"] * ОперандПравойЧасти.Множитель;
					
				КонецЦикла;
				
				
			КонецЦикла;
			
			ЕстьОшибка = Ложь;
			
			Если ПравилоПроверки.ОператорСравнения = "=" Тогда
				
				Если НЕ (ЛевоеЗначение05 = ПравоеЗначение05)
					ИЛИ НЕ (ЛевоеЗначение06 = ПравоеЗначение06)
					ИЛИ НЕ (ЛевоеЗначение07 = ПравоеЗначение07) Тогда
					
					ЕстьОшибка = Истина;
					
				КонецЕсли;
				
			ИначеЕсли ПравилоПроверки.ОператорСравнения = ">=" Тогда
				
				Если НЕ (ЛевоеЗначение05 >= ПравоеЗначение05)
					ИЛИ НЕ (ЛевоеЗначение06 >= ПравоеЗначение06)
					ИЛИ НЕ (ЛевоеЗначение07 >= ПравоеЗначение07) Тогда
					
					ЕстьОшибка = Истина;
					
				КонецЕсли;
				
			КонецЕсли;
			
			Если ЕстьОшибка Тогда
				РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Ошибка контрольных соотношений для ОКПД: " + ПравилоПроверки.ТекстКС, "Раздел1", СтруктураРеквизитовФормы.мИдГруппы1 + "01_" + Формат(НомСтроки + 1, "ЧГ="));
				СтатусПроверкиКС = Ложь;
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	
КонецПроцедуры

&НаСервере
Функция ПроверитьВозможностьВыгрузки(ПараметрыВыгрузки, ДеревоВыгрузки)
	
	СтатусПроверки   = Истина;
	СтатусПроверкиКС = Истина;
	
	// Проверка показателей раздела.
	Если ПустаяСтрока(ПараметрыВыгрузки.ОКПО) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма,
			"Не задан код ОКПО организации!", "Титульный", "ОргКодОКПО");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Если ПустаяСтрока(ПараметрыВыгрузки.ОргНазв) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма,
