&НаКлиенте
Процедура ТабличныйДокументВыбор(Элемент, Область, СтандартнаяОбработка)
	
	Если СтрЧислоВхождений(Область.Имя, "ДобавитьСтроку") > 0 Тогда
		ДобавитьСтроку("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтроку") > 0 Тогда
		УдалитьСтроку("");
	КонецЕсли;
	
	Если РегламентированнаяОтчетностьКлиент.ВыбраннаяОбластьРегламентированногоОтчетаНеВерна(ЭтаФорма, Область, СтандартнаяОбработка) Тогда
		Возврат;
	КонецЕсли;

	Если Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Титульный" Тогда
		
		Если Область.Имя = "ОргАдрес" Тогда
			РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчете(ЭтаФорма, Область, СтандартнаяОбработка);
		КонецЕсли;
		
	Иначе
		
		ПараметрВводаПоля = РегламентированнаяОтчетностьКлиентСервер.НайтиСвойстваПоказателя(ЭтаФорма, Область.Имя);
		
		Если ПараметрВводаПоля <> Неопределено И ПараметрВводаПоля.ТаблицаЗначений <> Неопределено Тогда
			
			КолонкаПоиска = "Код";
			КодПоказателя = ПараметрВводаПоля.Показатель;
			
			Если Сред(Область.Имя, 12, 2) = "01" Или Сред(Область.Имя, 12, 2) = "04" Тогда
				ВвестиПоказатель(Элемент, Область, КодПоказателя, Ложь, ПараметрВводаПоля.ТекстПриВыборе, ТЗВыбораПродукции, СтандартнаяОбработка, КолонкаПоиска);
			Иначе
				МассивВыбора = ПараметрВводаПоля.ТаблицаЗначений.НайтиСтроки(Новый Структура("Ключ", ТабличныйДокумент.Области["П002000100104_" + Сред(Область.Имя, 15)].Значение));
				ТЗВыбора.Очистить();
				Для Каждого ЭлемМассива Из МассивВыбора Цикл
					НовСтрТЗВыбора = ТЗВыбора.Добавить();
					НовСтрТЗВыбора.Код = ЭлемМассива.Код;
					НовСтрТЗВыбора.Название = ЭлемМассива.Название;
				КонецЦикла;
				НовСтрТЗВыбора = ТЗВыбора.Вставить(0);
				НовСтрТЗВыбора.Код = "";
				НовСтрТЗВыбора.Название = "Пустое значение";
				ВвестиПоказатель(Элемент, Область, КодПоказателя, Ложь, ПараметрВводаПоля.ТекстПриВыборе,          ТЗВыбора, СтандартнаяОбработка, КолонкаПоиска);
			КонецЕсли;
			
		КонецЕсли;

	КонецЕсли;

КонецПроцедуры

