				НоваяСтрока = КонтрольныеСоотношения.Добавить();
				НоваяСтрока.ТекстКС = ТекстКС;
				НоваяСтрока.КодПравила = СокрЛП( Макет.Область(НомСтр, 1, НомСтр, 1).Текст);
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтруктураПравилаПроверки);
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат КонтрольныеСоотношения;
	
