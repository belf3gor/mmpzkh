&НаСервере
Функция РазобратьСтрокуПравила(Знач СтрокаПравила)
	
	СтруктураПравила = Новый Структура;
	
	СимволРавно			= "=";
	СимволБольшеРавно	= ">=";
	СимволПлюс			= "+";
	
	ПозицияВыражения = СтрНайти(СтрокаПравила, СимволБольшеРавно);
	
	Если ПозицияВыражения = 0 Тогда
		
		ПозицияВыражения = СтрНайти(СтрокаПравила, СимволРавно);
		
		Если ПозицияВыражения = 0 Тогда // строка не содержит символа "=" - это не выражение
			Возврат Неопределено;
		КонецЕсли;
		
		ОператорСравнения = СимволРавно;
		
	Иначе
		ОператорСравнения = СимволБольшеРавно;
		
	КонецЕсли;
	
	ЛеваяЧастьВыражения = Лев(СтрокаПравила, ПозицияВыражения - 1);
	СтруктураПравила.Вставить("ЛеваяЧасть", СокрЛП(ЛеваяЧастьВыражения));
	
	СтруктураПравила.Вставить("ОператорСравнения", ОператорСравнения);
	
	СтрокаПраваяЧастьВыражения = СокрЛП( Сред(СтрокаПравила, ПозицияВыражения + СтрДлина(ОператорСравнения)) );
	
	МассивОперандовПравойЧасти = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(СтрокаПраваяЧастьВыражения, "+");
	
	ТаблицаОперандов = Новый ТаблицаЗначений;
	ТаблицаОперандов.Колонки.Добавить("Операнд");
	ТаблицаОперандов.Колонки.Добавить("Множитель");
	
	Для Каждого Операнд Из МассивОперандовПравойЧасти Цикл
		
		НоваяСтрока = ТаблицаОперандов.Добавить();
		
		ПозицияМножителя = СтрНайти(Операнд, "*");
		
		Если ПозицияМножителя = 0 Тогда
			НоваяСтрока.Операнд		= СокрЛП( Операнд);
			НоваяСтрока.Множитель	= 1;
			
		Иначе
			НоваяСтрока.Операнд		= СокрЛП( Лев(Операнд, ПозицияМножителя-1));
			НоваяСтрока.Множитель	= Число( СокрЛП( Сред( Операнд, ПозицияМножителя+1) ) );
			
		КонецЕсли;
		
	КонецЦикла;
	
	СтруктураПравила.Вставить("ПраваяЧасть", ТаблицаОперандов);
	
	Возврат СтруктураПравила
	
КонецФункции

