		// Открытие форм списка регистров с ошибочными записями.
		ОткрытьФорму("РегистрНакопления.УПЖКХ_Начисления.ФормаСписка", ПараметрыОткрытия, ЭтотОбъект);
		
	// Вывод сведений о проверке взаиморасчетов с пустым месяцем.
	ИначеЕсли Область.Расшифровка = "ОтсутствиеПустогоРасчетногоМесяцаВЗаписяхОВзаиморасчетах" Тогда
		
		ПараметрыОтбора = Новый Структура;
		ПараметрыОтбора.Вставить("Организация", Отчет.Организация);
		
		ПараметрыОткрытия = Новый Структура;
		ПараметрыОткрытия.Вставить("Отбор", ПараметрыОтбора);
		
		УстановитьОтборПоПериодуПриПроверкеМесяцаНачисления(ПараметрыОткрытия);
		
		// Открытие форм списка регистров с ошибочными записями.
		ОткрытьФорму("РегистрНакопления.КВП_ВзаиморасчетыПоЛицевымСчетам.ФормаСписка", ПараметрыОткрытия, ЭтотОбъект);
		
	ИначеЕсли Область.Расшифровка = "ОтсутствиеДокументовРегистрацияОплатыСНесформированнымиДокументамиОтражения" Тогда
		
		ПараметрыОтчета = Новый Структура;
		ПараметрыОтчета.Вставить("НачалоПериода", Отчет.НачалоПериода);
		ПараметрыОтчета.Вставить("КонецПериода",  Отчет.КонецПериода);
		ПараметрыОтчета.Вставить("Организация",   Отчет.Организация);
		
		МассивДокументовРО = ПолучитьМассивДокументовРОСНезаполненнымиДокументамиОтраженияНаСервере(ПараметрыОтчета);
		
		СтруктураОтбора = Новый Структура;
		СтруктураОтбора.Вставить("Ссылка", МассивДокументовРО);
		
		ПараметрыОткрытия = Новый Структура;
		ПараметрыОткрытия.Вставить("Отбор",       СтруктураОтбора);
		ПараметрыОткрытия.Вставить("Организация", Отчет.Организация);
		
		// Открытие формы списка документов с ошибками.
		ОткрытьФорму("Документ.КВП_РегистрацияОплаты.Форма.ФормаСписка", ПараметрыОткрытия, ЭтотОбъект);
		
	ИначеЕсли Область.Расшифровка = "ОтсутствиеНезаполненнойУслугиВЗаписяхОНачисленияИВзаиморасчетов" Тогда
		
		ПараметрыОтчета = Новый Структура;
		ПараметрыОтчета.Вставить("Организация", Отчет.Организация);
		
		ЕстьЗаписиПоВзаиморасчетам = Ложь;
		ЕстьЗаписиПоНачислениям = Ложь;
		
		ЕстьОшибки = ПроверитьВРегистрахНаличиеЗаписейСПустойУслугой(ПараметрыОтчета, ЕстьЗаписиПоВзаиморасчетам, ЕстьЗаписиПоНачислениям);
		
		ПараметрыОтбора = Новый Структура;
		ПараметрыОтбора.Вставить("Услуга",      ПредопределенноеЗначение("Справочник.КВП_Услуги.ПустаяСсылка"));
		ПараметрыОтбора.Вставить("Организация", Отчет.Организация);
		
		Если ЕстьЗаписиПоВзаиморасчетам Тогда
			ОткрытьФорму("РегистрНакопления.КВП_ВзаиморасчетыПоЛицевымСчетам.ФормаСписка", Новый Структура("Отбор", ПараметрыОтбора), ЭтотОбъект);
		КонецЕсли;
		
		Если ЕстьЗаписиПоНачислениям Тогда
			ОткрытьФорму("РегистрНакопления.УПЖКХ_Начисления.ФормаСписка", Новый Структура("Отбор", ПараметрыОтбора), ЭтотОбъект);
		КонецЕсли;
		
	ИначеЕсли Область.Расшифровка = "ОтсутствиеПустогоДоговораВзаиморасчетовВЗаписяхОНачислениях" Тогда
		
		ПараметрыОтбора = Новый Структура;
		ПараметрыОтбора.Вставить("Договор",     ПредопределенноеЗначение("Справочник.ДоговорыКонтрагентов.ПустаяСсылка"));
		ПараметрыОтбора.Вставить("Организация", Отчет.Организация);
		
		ОткрытьФорму("РегистрНакопления.УПЖКХ_Начисления.ФормаСписка", Новый Структура("Отбор", ПараметрыОтбора), ЭтотОбъект);
		
	ИначеЕсли Область.Расшифровка = "ОтсутствиеНезаполненныхОбязательныхРеквизитовСправочникаПомещения" Тогда
		
		ОткрытьФорму("Справочник.УПЖКХ_Помещения.ФормаСписка", Новый Структура("ПараметрМассивПомещений", ПолучитьМассивПомещенийСНезаполненнымиОбязательнымиРеквизитами()), ЭтотОбъект);
		
	// Квартплата -

	КонецЕсли;

