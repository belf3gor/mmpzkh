&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяРаздела = "", ОбластьИмя = "") Экспорт
	
	Перем ТаблицаБлока, Индекс, ИндексСтрока;
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Если ИмяРаздела = "Раздел2" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				СтруктЗависимыхЯчеек = Форма.СтруктураЗависимыхЯчеекДляАвторасчета[ИмяРаздела];
				
				ОбластьИмяБезИнд = Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы);
				_Инд = Сред(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы + 1);
				
				КодСтавкиСбора = СокрЛП(Форма.ТабличныйДокумент.Области["П000020007003"].Значение);
				
				СтавкаСбораПоКоду = 0;
				Если КодСтавкиСбора = "10" Тогда
					СтавкаСбораПоКоду = 100;
				ИначеЕсли КодСтавкиСбора = "30" Тогда
					СтавкаСбораПоКоду = 15;
				КонецЕсли;
				
				Если ОбластьИмя = "П000020007003" Тогда
					
					РегламентированнаяОтчетностьКлиентСервер.УстановитьИндекс(Индекс, ИндексСтрока);
					
					Пока Форма.ТабличныйДокумент.Области.Найти("П00002М108001_" + ИндексСтрока) <> Неопределено Цикл
						
						КодОВБР = СокрЛП(Форма.ТабличныйДокумент.Области["П00002М108001_" + ИндексСтрока].Значение);
						
						ЭлемСписка = Форма.СтруктураРеквизитовФормы.СписокСоответствияСтавокКодамОВБР.НайтиПоЗначению(КодОВБР);
						
						СтавкаСбораЗаОВБР = ?(ЭлемСписка <> Неопределено, СокрЛП(ЭлемСписка.Представление), "0");
						СтавкаСбораЗаОВБР = ?(ЗначениеЗаполнено(СтавкаСбораЗаОВБР), Число(СтавкаСбораЗаОВБР), 0);
						
						Форма.ТабличныйДокумент.Области["П00002М108002_" + ИндексСтрока].Значение
						= СтавкаСбораПоКоду * СтавкаСбораЗаОВБР / 100;
						
						Форма.ТабличныйДокумент.Области["П00002М110004_" + ИндексСтрока].Значение
						= Форма.ТабличныйДокумент.Области["П00002М108002_" + ИндексСтрока].Значение
						* Форма.ТабличныйДокумент.Области["П00002М109003_" + ИндексСтрока].Значение;
						
						РегламентированнаяОтчетностьКлиентСервер.УвеличитьИндекс(Индекс, ИндексСтрока);
						
					КонецЦикла;
					
				Иначе
					
					Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П00002М108002, ОбластьИмяБезИнд) > 0 Тогда
						
						КодОВБР = СокрЛП(Форма.ТабличныйДокумент.Области["П00002М108001" + _Инд].Значение);
						
						ЭлемСписка = Форма.СтруктураРеквизитовФормы.СписокСоответствияСтавокКодамОВБР.НайтиПоЗначению(КодОВБР);
						
						СтавкаСбораЗаОВБР = ?(ЭлемСписка <> Неопределено, СокрЛП(ЭлемСписка.Представление), "0");
						СтавкаСбораЗаОВБР = ?(ЗначениеЗаполнено(СтавкаСбораЗаОВБР), Число(СтавкаСбораЗаОВБР), 0);
						
						Форма.ТабличныйДокумент.Области["П00002М108002" + _Инд].Значение
						= СтавкаСбораПоКоду * СтавкаСбораЗаОВБР / 100;
						
					КонецЕсли;
					
					Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П00002М110004, ОбластьИмяБезИнд) > 0 Тогда
						
						Форма.ТабличныйДокумент.Области["П00002М110004" + _Инд].Значение
						= Форма.ТабличныйДокумент.Области["П00002М108002" + _Инд].Значение
						* Форма.ТабличныйДокумент.Области["П00002М109003" + _Инд].Значение;
						
					КонецЕсли;
					
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "" Тогда
		
		Для каждого Раздел Из Форма.СтруктураЗависимыхЯчеекДляАвторасчета Цикл
			Расчет(Форма, Раздел.Ключ);
		КонецЦикла;
		
	КонецЕсли;
	
	Форма.Модифицированность = Истина;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура РасчетВДеревеЗначений(Форма, ИмяРаздела)
	
	ИмяГлРаздела = ИмяРаздела;
	СтруктураРаздела = Форма.мСтруктураМногоуровневыхРазделов[ИмяРаздела];
	Если СтруктураРаздела.Свойство("ИмяГлавногоРаздела") Тогда
		ИмяГлРаздела = СтруктураРаздела["ИмяГлавногоРаздела"];
	КонецЕсли;
	
	ДеревоДанных = Неопределено;
	
	Если ИмяРаздела = "Раздел2" Тогда
		
		ДеревоДанных = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]);
		
		АктивнаяВетка = Неопределено;
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			АктивнаяВетка = ДеревоДанных.Строки[
			Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[0] - 1];
		КонецЕсли;
		
		ИмяГруппыМнЧ2 = Форма.СтруктураРеквизитовФормы.мИдГруппы2;
		СтруктураГруппыМнЧ2 = Форма.СтруктураРеквизитовФормы.СтруктураМногострочныхЧастей[ИмяГруппыМнЧ2];
		ИменаГрафМнЧ2 = СтруктураГруппыМнЧ2["ИменаГраф"];
		
		Для каждого ВеткаР2 Из ДеревоДанных.Строки Цикл
			
			ДеревоМнЧ2 = ВеткаР2.ДанныеМногострочныхЧастей[ИмяГруппыМнЧ2];
			Если ВеткаР2 = АктивнаяВетка Тогда
				Для каждого Пок Из ВеткаР2.Данные Цикл
					ВеткаР2.Данные.Вставить(Пок.Ключ, Форма.ТабличныйДокумент.Области[Пок.Ключ].Значение);
				КонецЦикла;
				Для каждого СтрокаМнЧ Из ДеревоМнЧ2.Строки Цикл
					ИндСтроки = Формат(ДеревоМнЧ2.Строки.Индекс(СтрокаМнЧ) + 1, "ЧГ=");
					Для каждого ИмяГрафы Из ИменаГрафМнЧ2 Цикл
						СтрокаМнЧ.Данные.Вставить(ИмяГрафы, Форма.ТабличныйДокумент.Области[ИмяГрафы + "_" + ИндСтроки].Значение);
					КонецЦикла;
				КонецЦикла;
			КонецЕсли;
			
			КодСтавкиСбора = СокрЛП(ВеткаР2.Данные["П000020007003"]);
			
			СтавкаСбораПоКоду = 0;
			Если КодСтавкиСбора = "10" Тогда
				СтавкаСбораПоКоду = 100;
			ИначеЕсли КодСтавкиСбора = "30" Тогда
				СтавкаСбораПоКоду = 15;
			КонецЕсли;
			
			Для каждого СтрокаМнЧ Из ДеревоМнЧ2.Строки Цикл
				
				КодОВБР = СокрЛП(СтрокаМнЧ.Данные["П00002М108001"]);
				
				ЭлемСписка = Форма.СтруктураРеквизитовФормы.СписокСоответствияСтавокКодамОВБР.НайтиПоЗначению(КодОВБР);
				
				СтавкаСбораЗаОВБР = ?(ЭлемСписка <> Неопределено, СокрЛП(ЭлемСписка.Представление), "0");
				СтавкаСбораЗаОВБР = ?(ЗначениеЗаполнено(СтавкаСбораЗаОВБР), Число(СтавкаСбораЗаОВБР), 0);
				
				СтрокаМнЧ.Данные.Вставить("П00002М108002", СтавкаСбораПоКоду * СтавкаСбораЗаОВБР / 100);
				
				СтрокаМнЧ.Данные.Вставить("П00002М110004",
				СтрокаМнЧ.Данные["П00002М108002"] * СтрокаМнЧ.Данные["П00002М109003"]);
				
			КонецЦикла;
			
			Если ВеткаР2 = АктивнаяВетка Тогда
				Для каждого Пок Из ВеткаР2.Данные Цикл
					Форма.ТабличныйДокумент.Области[Пок.Ключ].Значение = Пок.Значение;
				КонецЦикла;
				Для каждого СтрокаМнЧ Из ДеревоМнЧ2.Строки Цикл
					ИндСтроки = Формат(ДеревоМнЧ2.Строки.Индекс(СтрокаМнЧ) + 1, "ЧГ=");
					Для каждого ИмяГрафы Из ИменаГрафМнЧ2 Цикл
						Форма.ТабличныйДокумент.Области[ИмяГрафы + "_" + ИндСтроки].Значение = СтрокаМнЧ.Данные[ИмяГрафы];
					КонецЦикла;
				КонецЦикла;
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Если ДеревоДанных <> Неопределено Тогда
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]
		= ПоместитьВоВременноеХранилище(ДеревоДанных, Форма.УникальныйИдентификатор);
	КонецЕсли;
	
КонецПроцедуры

