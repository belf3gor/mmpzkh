	Расчет(ЭтаФорма, ИмяСтраницыПанели, ОбластьИмя);

КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяСтраницыПанели = "", ОбластьИмя = "")
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат; // отключен режим АвтоЗаполнения
	КонецЕсли;
	
	ПризнакОкругленияПоказателейПередСуммированием = Ложь;
	Если НЕ ЗначениеЗаполнено(ОбластьИмя) ИЛИ СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П000010001003, ОбластьИмя) > 0 Тогда
		УстановитьСуммуПоказателей(Форма, "П000010001003", "П000010001103, П000010001203, П000010001303", ПризнакОкругленияПоказателейПередСуммированием);
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ОбластьИмя) ИЛИ СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П000010004003, ОбластьИмя) > 0 Тогда
		УстановитьСуммуПоказателей(Форма, "П000010004003", "П000010005003, П000010006003, П000010007003, П000010007103, П000010007203, П000010007303, П000010007403", ПризнакОкругленияПоказателейПередСуммированием);
	КонецЕсли;
	
	Если НЕ ЗначениеЗаполнено(ОбластьИмя) ИЛИ СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П000010011003, ОбластьИмя) > 0 Тогда
		УстановитьСуммуПоказателей(Форма, "П000010011003", "П000010001003, П000010002003, -П000010004003, -П000010008003, -П000010009003, П000010010003", ПризнакОкругленияПоказателейПередСуммированием);
	КонецЕсли;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура УстановитьСуммуПоказателей(Форма, Показатель, Знач СуммируемыеПоказатели, Округлять)

	МассивИменОбластей = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(СуммируемыеПоказатели);

	СуммаПоказателей = 0;
	Для Каждого ИмяОбласти из МассивИменОбластей Цикл
		
		ИмяОбласти = СтрЗаменить(ИмяОбласти, " ", "");
		
		Если Лев(ИмяОбласти, 1) = "-" Тогда
			ИмяПоказателя = СокрЛП(Сред(ИмяОбласти, 2));
			МножительПоказателя = -1;
		Иначе
			ИмяПоказателя = ИмяОбласти;
			МножительПоказателя = 1;
		КонецЕсли;
		
		Если Округлять Тогда
			ЗначениеПоказателя = МножительПоказателя * РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФорматуДелителя(Форма, Форма.ТабличныйДокумент.Области[ИмяПоказателя].Значение);
		Иначе
			ЗначениеПоказателя = МножительПоказателя * Форма.ТабличныйДокумент.Области[ИмяПоказателя].Значение;
		КонецЕсли;
		
		СуммаПоказателей = СуммаПоказателей + ЗначениеПоказателя;
	КонецЦикла;

	Форма.ТабличныйДокумент.Области[Показатель].Значение = СуммаПоказателей;

КонецПроцедуры

&НаКлиенте
