	НоваяФорма.ФормаОтчета        = "ФормаОтчета2016Кв1";
	НоваяФорма.ОписаниеОтчета     = "Приложение №1 к Приказу ФНС России от 09.11.2015 № ММВ-7-3/497@.";
	НоваяФорма.РедакцияФормы      = "от 09.11.2015 № ММВ-7-3/497@.";
