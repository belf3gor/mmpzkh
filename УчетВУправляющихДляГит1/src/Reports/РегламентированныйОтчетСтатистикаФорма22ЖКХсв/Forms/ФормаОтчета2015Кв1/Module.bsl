		КонецЕсли;
		
		ТекстВидыУслугОбъемы = ТекстВидыУслугОбъемы + "
		|		КОГДА ТаблицаУслуг.Услуга В (&" + СтрокаВидаУслуги.ВидУслуги + ")
		|			ТОГДА """ + СтрокаВидаУслуги.ВидУслуги + """";
		
