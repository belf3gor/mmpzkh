	// По разделу 2.
	Для НомКол = 4 По 11 Цикл
		Области["П0000020019" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение =
			  Области["П0000020020" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000020021" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000020022" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
	КонецЦикла;
	Для НомКол = 3 По 11 Цикл
		Области["П0000020012" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение =
			  Области["П0000020013" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000020019" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
	КонецЦикла;
	// По разделу 3.
	Для НомКол = 3 По 8 Цикл
		Области["П0000030039" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение =
			  Области["П0000030040" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030041" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
	КонецЦикла;
	Для НомКол = 3 По 8 Цикл
		Области["П0000030046" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение =
			  Области["П0000030047" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030048" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030049" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030050" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030051" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030054" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030055" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030057" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030058" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
	КонецЦикла;
	Для НомКол = 3 По 8 Цикл
		Области["П0000030059" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение =
			  Области["П0000030039" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение
			+ Области["П0000030046" + Формат(НомКол, "ЧЦ=2; ЧВН=; ЧГ=")].Значение;
	КонецЦикла;
	Для НомСтр = 39 По 59 Цикл
		Области["П000003" + Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=") + "09"].Значение =
			  Области["П000003" + Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=") + "04"].Значение
			+ Области["П000003" + Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=") + "05"].Значение
			+ ?(НомСтр <> 45, Области["П000003" + Формат(НомСтр, "ЧЦ=4; ЧВН=; ЧГ=") + "06"].Значение, 0);
