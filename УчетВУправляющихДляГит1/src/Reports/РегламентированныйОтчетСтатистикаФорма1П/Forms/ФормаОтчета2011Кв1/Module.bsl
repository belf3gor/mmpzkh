&НаКлиенте
Процедура ТабличныйДокументВыбор(Элемент, Область, СтандартнаяОбработка)
	
	Если Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Титульный" Тогда
		
		Если Область.Имя = "ОргАдрес" Тогда
			РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчете(ЭтаФорма, Область, СтандартнаяОбработка);
		КонецЕсли;
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтроку") > 0 Тогда
		ДобавитьСтроку("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтроку") > 0 Тогда
		УдалитьСтроку("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "ДобавитьСтраницу") > 0 Тогда
		ДобавитьСтраницу("");
	ИначеЕсли СтрЧислоВхождений(Область.Имя, "УдалитьСтраницу") > 0 Тогда
		УдалитьСтраницу("");
	ИначеЕсли Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Раздел1" Тогда
		
		Если Область.Имя = "Дата1_1"
			Или Область.Имя = "Дата1_2"
			Или Область.Имя = "Дата1_3"
			Или Область.Имя = "Дата2_1"
			Или Область.Имя = "Дата2_2"
			Или Область.Имя = "Дата2_3"
			Или Область.Имя = "Дата3_1"
			Или Область.Имя = "Дата3_2"
			Или Область.Имя = "Дата3_3"
			Тогда
			СтандартнаяОбработка = Ложь;
			
			Если СтрНайти(Область.Имя, "1_") > 0 Тогда
				ПерваяДата = "1";
			ИначеЕсли СтрНайти(Область.Имя, "2_") > 0 Тогда
				ПерваяДата = "2";
			Иначе
				ПерваяДата = "3";
			КонецЕсли;
			стрУказаннаяДата = "";
			стрУказаннаяДата = ЭтаФорма[Элемент.Имя].Области["Дата" + ПерваяДата + "_3"].Значение
			+ ЭтаФорма[Элемент.Имя].Области["Дата" + ПерваяДата + "_2"].Значение
			+ ЭтаФорма[Элемент.Имя].Области["Дата" + ПерваяДата + "_1"].Значение;
			
			Если ПустаяСтрока(стрУказаннаяДата) Тогда
				стрУказаннаяДата = "00010101000000";
			Иначе
				стрУказаннаяДата = стрУказаннаяДата + "000000";
			КонецЕсли;
			
			УказанннаяДата = Дата(стрУказаннаяДата);
			
			ДополнительныеПараметры = Новый Структура("УказанннаяДата, Элемент, ПерваяДата", УказанннаяДата, Элемент, ПерваяДата);
			ОписаниеОповещения = Новый ОписаниеОповещения("ТабличныйДокументВыборЗавершение", ЭтотОбъект, ДополнительныеПараметры);
			ПоказатьВводДаты(ОписаниеОповещения, УказанннаяДата, "Введите дату", ЧастиДаты.Дата);
			
		КонецЕсли;
		
	ИначеЕсли Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Раздел9" Тогда
		
		Если Область.Имя = "ОргАдрес" Тогда
			РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчете(ЭтаФорма, Область, СтандартнаяОбработка);
		КонецЕсли;
		
	ИначеЕсли Элементы.РазделыОтчета.ТекущиеДанные.КолонкаРазделыОтчетаСокрНаим = "Раздел10" Тогда
		
		Если Область.Имя = "ОргАдрес" Тогда
			РегламентированнаяОтчетностьКлиент.ОбработкаАдресаВСтатистическомОтчете(ЭтаФорма, Область, СтандартнаяОбработка);
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ТабличныйДокументВыборЗавершение(Дата, ДополнительныеПараметры) Экспорт
	
	Элемент = ДополнительныеПараметры.Элемент;
	ПерваяДата = ДополнительныеПараметры.ПерваяДата;
	
	УказанннаяДата = ?(Дата = Неопределено, ДополнительныеПараметры.УказанннаяДата, Дата); 
	
	стрУказаннаяДата = Формат(УказанннаяДата, "ДФ=""ддММгггг""");
	
	ЭтаФорма[Элемент.Имя].Области["Дата" + ПерваяДата + "_1"].Значение = Сред(стрУказаннаяДата, 1, 2); // День
	ЭтаФорма[Элемент.Имя].Области["Дата" + ПерваяДата + "_2"].Значение = Сред(стрУказаннаяДата, 3, 2); // Мес
	ЭтаФорма[Элемент.Имя].Области["Дата" + ПерваяДата + "_3"].Значение = Сред(стрУказаннаяДата, 5); // Мес
	
	Модифицированность = Истина;
	
КонецПроцедуры

