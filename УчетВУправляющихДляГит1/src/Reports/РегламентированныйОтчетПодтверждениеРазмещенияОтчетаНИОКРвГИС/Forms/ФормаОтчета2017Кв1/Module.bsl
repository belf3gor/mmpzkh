	Если СокрЛП(Форма.ТабличныйДокумент.Области.Период.Значение) <> "50" Тогда
		
		КодОтчетногоПериода = "";
		
		ПоМесту = СокрЛП(Форма.ТабличныйДокумент.Области.ПоМесту.Значение);
		Если ЗначениеЗаполнено(ПоМесту) Тогда
			ЭтоКонсолидированнаяГруппа = ПоМесту = "218";
			Если Форма.СтруктураРеквизитовФормы.мПериодичность
				= Форма.СтруктураРеквизитовФормы.ПеречислениеПериодичностьКвартал Тогда
				Если ЭтоКонсолидированнаяГруппа Тогда
					КодОтчетногоПериода = "16";
				Иначе
					КодОтчетногоПериода = "34";
				КонецЕсли;
			Иначе
				Если ЭтоКонсолидированнаяГруппа Тогда
					КодОтчетногоПериода = "68";
				Иначе
					КодОтчетногоПериода = "46";
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
		
		Форма.ТабличныйДокумент.Области.Период.Значение = КодОтчетногоПериода;
		
	КонецЕсли;
	
	Форма.ТабличныйДокумент.Области.ОтчетГод.Значение
	= Формат(Год(Форма.СтруктураРеквизитовФормы.мДатаКонцаПериодаОтчета), "ЧГ=");
	
