					СтруктураРеквизитовФормы.ЕстьИсполнение = Истина;
				КонецЕсли;
				СтруктураРеквизитовФормы.Раздел2Заполнен = Истина;
			Иначе
				ЕстьПустойТипСведений = Истина;
				Раздел2СтрБезТипаСведений = Раздел2СтрБезТипаСведений + Строка(НомСтрРаздела) + ", ";
			КонецЕсли;
			// Проверяем заполненность данных в строке.
			Если НЕ СтруктураРеквизитовФормы.Раздел2Заполнен Тогда
