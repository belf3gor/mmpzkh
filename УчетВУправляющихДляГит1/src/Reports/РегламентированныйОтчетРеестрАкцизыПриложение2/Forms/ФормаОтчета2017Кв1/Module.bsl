			Обл = Форма.ТабличныйДокумент.Области[ИмяГрафыНумерацииСтрок + "_1"];
			Если Обл <> Неопределено Тогда
				Обл.Значение = "1";
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
