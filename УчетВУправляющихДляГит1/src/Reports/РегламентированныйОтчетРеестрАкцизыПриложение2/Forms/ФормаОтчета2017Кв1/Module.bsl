							ВывестиПоказательВXML(Эл, Ветка_П11000.Данные[Эл.Ключ]);
						КонецЕсли;
					КонецЦикла;
					
					// 11100.
					СвТрДок = ПолучитьПодчиненныйЭлемент(ЭкзСвВидТрДок, "СвТрДок");
					ДанныеМнЧ_П11100 = Ветка_П11000.ДанныеМногострочныхЧастей.П11100.Строки;
					Для каждого Ветка_П11100 Из ДанныеМнЧ_П11100 Цикл
						
						ЭкзСвТрДок = СкопироватьУзел(ЭкзСвВидТрДок, СвТрДок, ЭкзСвВидТрДок.Строки.Количество() - 1);
						Для каждого Эл Из ЭкзСвТрДок.Строки Цикл
