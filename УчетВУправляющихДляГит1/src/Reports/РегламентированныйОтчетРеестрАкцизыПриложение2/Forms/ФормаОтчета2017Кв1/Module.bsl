								ВывестиПоказательВXML(Эл,
								?(НЕ ЗначениеЗаполнено(ТекЗнач) И (Заполн_ВидТрДок ИЛИ Заполн_ДатаТрДок), "б/н", ТекЗнач));
							Иначе
								ВывестиПоказательВXML(Эл, Ветка_П11100.Данные[Эл.Ключ]);
							КонецЕсли;
						КонецЦикла;
						
					КонецЦикла;
					
				КонецЦикла;
				
