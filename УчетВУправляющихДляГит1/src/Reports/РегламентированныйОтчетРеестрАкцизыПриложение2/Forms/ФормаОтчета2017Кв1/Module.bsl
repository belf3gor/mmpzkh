				Для каждого Эл Из ЭкзСведОпер.Строки Цикл
					Если Эл.Строки.Количество() = 0 Тогда
						Если Эл.Код = "НомПор" Тогда
							ТекЗнач = СокрЛП(Ветка_П10000.Данные[Эл.Ключ]);
							ДлинаТекЗнач = СтрДлина(ТекЗнач);
							ВывестиПоказательВXML(Эл, ?(ДлинаТекЗнач > 3, 0, ТекЗнач));
						Иначе
							ВывестиПоказательВXML(Эл, Ветка_П10000.Данные[Эл.Ключ]);
						КонецЕсли;
					КонецЕсли;
				КонецЦикла;
				
				// 11000.
				СвВидТрДок = ПолучитьПодчиненныйЭлемент(ЭкзСведОпер, "СвВидТрДок");
				ДанныеМнЧ_П11000 = Ветка_П10000.ДанныеМногострочныхЧастей.П11000.Строки;
				Для каждого Ветка_П11000 Из ДанныеМнЧ_П11000 Цикл
					
					ЭкзСвВидТрДок = СкопироватьУзел(ЭкзСведОпер, СвВидТрДок, ЭкзСведОпер.Строки.Количество() - 1);
					Для каждого Эл Из ЭкзСвВидТрДок.Строки Цикл
