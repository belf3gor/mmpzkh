		Для НомЛиста = 1 По КолЛистовРаздела Цикл
			
			ПриращениеКНомеру = (НомЛиста - 1) * СтрокМнЧНаЛисте;
			ДанныеМнЧДляПечати = Новый Структура;
			Для ИндСтрокиМнЧ = 1 По СтрокМнЧНаЛисте Цикл
				_ИндСтрокиМнЧ = СтрокаСИндексомПоказателя(ИндСтрокиМнЧ);
				ИндСПриращением = ИндСтрокиМнЧ + ПриращениеКНомеру;
				
				НовИмяП00023М101003 = ИмяП00023М101003 + _ИндСтрокиМнЧ;
				НовИмяП00023М101503 = ИмяП00023М101503 + _ИндСтрокиМнЧ;
				
				ДанныеМнЧДляПечати.Вставить(НовИмяП00023М101003, "");
				ДанныеМнЧДляПечати.Вставить(НовИмяП00023М101503, 0);
				
				Если КолСтрокМнЧ >= ИндСПриращением Тогда
					ДанныеМнЧДляПечати.Вставить(НовИмяП00023М101003,
					ДанныеМнЧ.Строки[ИндСПриращением - 1].Данные[ИмяП00023М101003]);
					ДанныеМнЧДляПечати.Вставить(НовИмяП00023М101503,
					ДанныеМнЧ.Строки[ИндСПриращением - 1].Данные[ИмяП00023М101503]);
				КонецЕсли;
			КонецЦикла;
			МассивДанныхМнЧДляПечати.Добавить(ДанныеМнЧДляПечати);
			
		КонецЦикла;
		
		// Вывод листов.
