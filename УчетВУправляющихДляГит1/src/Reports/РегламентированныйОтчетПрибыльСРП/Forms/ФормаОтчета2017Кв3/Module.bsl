				ИмяОблГод = ИмяПокГод + "_" + НомСтроки;
				
				Год_ = СокрЛП(СтрокаМнЧРаздела24.Данные[ИмяПокГод]);
				
				Если НЕ ЗначениеЗаполнено(Год_) Тогда
					СообщитьВТС("В разделе 2.4 не задан год для строки " + НомСтрокиДляСообщения + ".",
					"Раздел24", ИмяОблГод, НомерСтраницы);
					СтатусПроверки = Ложь;
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЦикла;
		
		Если НЕ ЗаполненаХотяБыОднаСтрокаМнЧРаздела24 Тогда
			
			СообщитьВТС("В разделе 2.4 не задан год ни для одной из строк 020-170.",
			"Раздел24", "П00024М100001_1", НомерСтраницы);
			СтатусПроверки = Ложь;
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат СтатусПроверки;
	
КонецФункции

&НаСервере
Функция ЗаполненРаздел(Знач ДеревоРаздела, Знач ИмяРаздела)
	
	ПоказателиНеанализируемыеНаЗаполненность = Новый Массив;
	
