&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяРаздела = "", ОбластьИмя = "") Экспорт
	
	Перем ТаблицаБлока;
	
	Если Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет Тогда
		Возврат;
	КонецЕсли;
	
	Если ИмяРаздела = "Раздел2" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				СтруктЗависимыхЯчеек = Форма.СтруктураЗависимыхЯчеекДляАвторасчета[ИмяРаздела];
				
				// Стр. 010.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020001003, ОбластьИмя) > 0 Тогда
					Форма.ТабличныйДокумент.Области["П000020001003"].Значение
					= Окр(Форма.ТабличныйДокумент.Области["П000020002003"].Значение, 4)
					+ Окр(Форма.ТабличныйДокумент.Области["П000020003003"].Значение, 4);
				КонецЕсли;
				
				// Стр. 050.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020005003, ОбластьИмя) > 0 Тогда
					Форма.ТабличныйДокумент.Области["П000020005003"].Значение
					= Окр(Форма.ТабличныйДокумент.Области["П000020001003"].Значение, 4)
					- Окр(Форма.ТабличныйДокумент.Области["П000020004003"].Значение, 4);
				КонецЕсли;
				
				// Стр. 060.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020006003, ОбластьИмя) > 0 Тогда
					Если Раздел24ВключаетсяВСоставДекларации(Форма) Тогда
						Стр050 = Окр(Форма.ТабличныйДокумент.Области["П000020005003"].Значение, 4);
						Если Стр050 < 0 Тогда
							Форма.ТабличныйДокумент.Области["П000020006003"].Значение = 0;
						Иначе
							// В ячейку с показателем стр. 060 переносится значение из стр. 180 раздела 2.4.
							Форма.ТабличныйДокумент.Области["П000020006003"].Значение
							= Форма.СтруктураРеквизитовФормы["Раздел24_Строка180"];
						КонецЕсли;
					Иначе
						// Для ячейки с показателем стр. 060 установлен режим ввода значения вручную.
					КонецЕсли;
				КонецЕсли;
				
				// Стр. 070.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020007003, ОбластьИмя) > 0 Тогда
					Форма.ТабличныйДокумент.Области["П000020007003"].Значение
					= Макс(Окр(Форма.ТабличныйДокумент.Области["П000020005003"].Значение, 4)
					- Окр(Форма.ТабличныйДокумент.Области["П000020006003"].Значение, 4), 0);
				КонецЕсли;
				
				// Стр. 090.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020009003, ОбластьИмя) > 0 Тогда
					Стр080 = Форма.ТабличныйДокумент.Области["П000020008003"].Значение;
					Стр080 = ?(Стр080 = 0, 100, Стр080);
					Форма.ТабличныйДокумент.Области["П000020009003"].Значение
					= Окр(Окр(Форма.ТабличныйДокумент.Области["П000020007003"].Значение, 4) * Стр080 / 100, 4);
				КонецЕсли;
				
				// Стр. 110.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020011003, ОбластьИмя) > 0 Тогда
					Ставка090а = Форма.ТабличныйДокумент.Области["П00002000900А"].Значение;
					Если Ставка090а > 0 Тогда
						Форма.ТабличныйДокумент.Области["П000020011003"].Значение
						= Окр(Окр(Форма.ТабличныйДокумент.Области["П000020009003"].Значение, 4) * Ставка090а / 100, 4);
					Иначе
						// Для ячейки с показателем стр. 110 установлен режим ввода значения вручную.
					КонецЕсли;
				КонецЕсли;
				
				// Стр. 120.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020012003, ОбластьИмя) > 0 Тогда
					Ставка090б = Форма.ТабличныйДокумент.Области["П00002000900Б"].Значение;
					Если Ставка090б > 0 Тогда
						Форма.ТабличныйДокумент.Области["П000020012003"].Значение
						= Окр(Окр(Форма.ТабличныйДокумент.Области["П000020009003"].Значение, 4) * Ставка090б / 100, 4);
					Иначе
						// Для ячейки с показателем стр. 120 установлен режим ввода значения вручную.
					КонецЕсли;
				КонецЕсли;
				
				// Стр. 100.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020010003, ОбластьИмя) > 0 Тогда
					Форма.ТабличныйДокумент.Области["П000020010003"].Значение
					= Окр(Форма.ТабличныйДокумент.Области["П000020011003"].Значение, 4)
					+ Окр(Форма.ТабличныйДокумент.Области["П000020012003"].Значение, 4);
				КонецЕсли;
				
				// Стр. 130.
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000020013003, ОбластьИмя) > 0 Тогда
					Форма.ТабличныйДокумент.Области["П000020013003"].Значение
					= Окр(Форма.ТабличныйДокумент.Области["П000020014003"].Значение, 4)
					+ Окр(Форма.ТабличныйДокумент.Области["П000020015003"].Значение, 4);
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "Раздел24" Тогда
		
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			
			Если ЗначениеЗаполнено(ОбластьИмя) Тогда
				
				// Стр. 010.
				СтруктЗависимыхЯчеек = Форма.СтруктураЗависимыхЯчеекДляАвторасчета[ИмяРаздела];
				
				ОбластьИмяБезИнд = Лев(ОбластьИмя, Форма.СтруктураРеквизитовФормы.ДлинаИмениГрафы);
				
				Если СтрЧислоВхождений(СтруктЗависимыхЯчеек.П000240001003, ОбластьИмяБезИнд) > 0 Тогда
					Стр010 = 0;
					Инд = 1;
					Инд_Строка = СтрокаСИндексомПоказателя(Инд);
					Обл = Форма.ТабличныйДокумент.Области.Найти("П00024М100003" + Инд_Строка);
					Пока Обл <> Неопределено Цикл
						Стр010 = Стр010 + Окр(Обл.Значение, 4);
						Инд = Инд + 1;
						Инд_Строка = СтрокаСИндексомПоказателя(Инд);
						Обл = Форма.ТабличныйДокумент.Области.Найти("П00024М100003" + Инд_Строка);
					КонецЦикла;
					Форма.ТабличныйДокумент.Области.Найти("П000240001003").Значение = Стр010;
				КонецЕсли;
				
				// Стр. 180.
				Если Форма.СтруктураРеквизитовФормы["Раздел2_Строка050"] < 0 Тогда
					Форма.ТабличныйДокумент.Области.Найти("П000240018003").Значение = 0;
				КонецЕсли;
				
			ИначеЕсли НЕ ЗначениеЗаполнено(ОбластьИмя) Тогда
				РасчетВДеревеЗначений(Форма, ИмяРаздела);
			КонецЕсли;
		Иначе
			РасчетВДеревеЗначений(Форма, ИмяРаздела);
		КонецЕсли;
		
	ИначеЕсли ИмяРаздела = "" Тогда
		
		Для каждого Раздел Из Форма.СтруктураЗависимыхЯчеекДляАвторасчета Цикл
			Расчет(Форма, Раздел.Ключ);
		КонецЦикла;
		
	КонецЕсли;
	
	Форма.Модифицированность = Истина;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура РасчетВДеревеЗначений(Форма, ИмяРаздела)
	
	ИмяГлРаздела = ИмяРаздела;
	СтруктураРаздела = Форма.мСтруктураМногоуровневыхРазделов[ИмяРаздела];
	Если СтруктураРаздела.Свойство("ИмяГлавногоРаздела") Тогда
		ИмяГлРаздела = СтруктураРаздела["ИмяГлавногоРаздела"];
	КонецЕсли;
	
	ДеревоДанных = Неопределено;
	
	Если ИмяРаздела = "Раздел2" Тогда
		
		ДеревоДанных = ПолучитьИзВременногоХранилища(
		Форма.СтруктураРеквизитовФормы["АдресВоВрХранилищеДеревоДанных" + ИмяГлРаздела]);
		
		АктивнаяВетка = Неопределено;
		Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = ИмяРаздела Тогда
			АктивнаяВетка = ДеревоДанных.Строки[
			Форма.СтруктураРеквизитовФормы.НомераСтрокМногоуровнегоРаздела[0] - 1];
		КонецЕсли;
		
		ВеткаР2 = ДеревоДанных.Строки[0];
		
		Если ВеткаР2 = АктивнаяВетка Тогда
			Для каждого Пок Из ВеткаР2.Данные Цикл
				ВеткаР2.Данные.Вставить(Пок.Ключ, Форма.ТабличныйДокумент.Области[Пок.Ключ].Значение);
			КонецЦикла;
		КонецЕсли;
		
		// Стр. 010.
