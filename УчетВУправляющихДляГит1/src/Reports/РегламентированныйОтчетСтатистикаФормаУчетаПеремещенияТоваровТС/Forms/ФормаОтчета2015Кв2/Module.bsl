	Если ПустаяСтрока(ТабличныйДокумент.Области.СтранаОтправленияКод.Значение) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Не указана страна отправления!", ИмяПоляТаблДокумента, "СтранаОтправленияКод");
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ПустаяСтрока(ТабличныйДокумент.Области.СтранаНазначенияКод.Значение) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Не указана страна назначения!", ИмяПоляТаблДокумента, "СтранаНазначенияКод");
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	НомСтр = 0;
	Пока Истина Цикл 
		НомСтр = НомСтр + 1;
		Суффикс = "_" + Формат(НомСтр, "ЧГ=");
		Если ТабличныйДокумент.Области.Найти("ВесТовара"+Суффикс) = Неопределено Тогда 
			Прервать;
		КонецЕсли;
		
