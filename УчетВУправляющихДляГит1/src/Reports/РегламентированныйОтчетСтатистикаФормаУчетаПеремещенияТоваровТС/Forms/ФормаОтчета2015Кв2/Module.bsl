&НаКлиенте
Процедура ОбработкаВыбораВПолеТабличногоДокумента(Элемент, Область, СтандартнаяОбработка)
	
	Если РегламентированнаяОтчетностьКлиент.ВыбраннаяОбластьРегламентированногоОтчетаНеВерна(ЭтаФорма, Область, СтандартнаяОбработка) Тогда
		Возврат;
	КонецЕсли;
	
	ИмяЯчейки = Область.Имя;
	
	ПараметрВводаПоля = НайтиСвойстваПоказателя(ИмяЯчейки);
	
	//создание динамического списка выбора
	//обработка таблицы значений - удаление вариантов, не проходящих по условиям
	Если ТипЗнч(ПараметрВводаПоля) = Тип("Массив") Тогда
		Если ПараметрВводаПоля.Количество() > 0 И ПараметрВводаПоля[0].ТаблицаЗначений <> Неопределено Тогда
			КодПоказателя = ПараметрВводаПоля[0].Показатель;
			ТЗВыбора = ПараметрВводаПоля[0].ТаблицаЗначений;
			ТекстВыбора = ПараметрВводаПоля[0].ТекстПриВыборе;
		КонецЕсли;
	Иначе 	
		Если ПараметрВводаПоля <> Неопределено И ПараметрВводаПоля.ТаблицаЗначений <> Неопределено Тогда		
			КодПоказателя = ПараметрВводаПоля.Показатель;
			ТЗВыбора = ПараметрВводаПоля.ТаблицаЗначений;
			ТекстВыбора = ПараметрВводаПоля.ТекстПриВыборе;
		КонецЕсли;	
	КонецЕсли;
		
	ТребРезультат = 0;
	
	Если СтрНайти(ИмяЯчейки, "СтранаОтправления") > 0 ИЛИ СтрНайти(ИмяЯчейки, "СтранаНазначения") > 0 Тогда
		ТребРезультат = 1;
	КонецЕсли;	
	Если ТребРезультат <> 0 Тогда
		КопироватьДанныеФормы(ТЗВыбора, СвойстваПоказателейЭталон);
		//из ТЗВыбора удаляются элементы, у которых результат отличается от нуля и ТребРезультат
		РазмерТЗ = ТЗВыбора.Количество();
		Для Сч = 1 По РазмерТЗ Цикл
			ЭлементТЗ = ТЗВыбора[РазмерТЗ - Сч];
			Рез = ?(ЭлементТЗ.РезультатПроверки = "", 0, Число(ЭлементТЗ.РезультатПроверки));
			Если Рез <> 0 И Рез <> ТребРезультат Тогда
				ТЗВыбора.Удалить(ЭлементТЗ);
			КонецЕсли;
		КонецЦикла; 
	КонецЕсли;
	
	Если СтрНайти(ИмяЯчейки, "СтранаОтправления") > 0 Тогда
		ОбластьНаправлениеПеремещения = ТабличныйДокумент.Области.НаправлениеПеремещения;
		ТекСтрока = ТЗВыбора.НайтиСтроки(Новый Структура("Код", "RU"));
		Если ОбластьНаправлениеПеремещения.Значение = "ИМ" Тогда
			Если ТекСтрока.Количество() > 0 Тогда
				ТЗВыбора.Удалить(ТекСтрока[0]);
			КонецЕсли;  
		ИначеЕсли ОбластьНаправлениеПеремещения.Значение = "ЭК" Тогда	
			Если ТекСтрока.Количество() > 0 Тогда
				ТЗВыбора.Очистить();
				ТЗВыбораСтрока = ТЗВыбора.Добавить();
				ТЗВыбораСтрока.Код = ТекСтрока[0].Код;
				ТЗВыбораСтрока.Название = ТекСтрока[0].Название;
			КонецЕсли;  
		КонецЕсли;	
	КонецЕсли;	
	Если СтрНайти(ИмяЯчейки, "СтранаНазначения") > 0 Тогда
		ОбластьНаправлениеПеремещения = ТабличныйДокумент.Области.НаправлениеПеремещения;
		ТекСтрока = ТЗВыбора.НайтиСтроки(Новый Структура("Код", "RU"));
		Если ОбластьНаправлениеПеремещения.Значение = "ЭК" Тогда
			Если ТекСтрока.Количество() > 0 Тогда
				ТЗВыбора.Удалить(ТекСтрока[0]);
			КонецЕсли;  
		ИначеЕсли ОбластьНаправлениеПеремещения.Значение = "ИМ" Тогда	
			Если ТекСтрока.Количество() > 0 Тогда
				ТЗВыбора.Очистить();
				ТЗВыбораСтрока = ТЗВыбора.Добавить();
				ТЗВыбораСтрока.Код = ТекСтрока[0].Код;
				ТЗВыбораСтрока.Название = ТекСтрока[0].Название;
			КонецЕсли;  
		КонецЕсли;	
	КонецЕсли;	
	
	КолонкаПоиска = "Код";

	Если СтрНайти(ИмяЯчейки, "ВалютаТовара") > 0 ИЛИ СтрНайти(ИмяЯчейки, "ЕдИзмТовара") > 0 Тогда
		
		КолонкаПоиска = "Кратко";
		
	КонецЕсли;
	
	ВвестиПоказатель(Элемент, Область, КодПоказателя, Ложь, ТекстВыбора, ТЗВыбора, СтандартнаяОбработка, КолонкаПоиска);
	
