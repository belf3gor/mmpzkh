&НаКлиенте
Функция НайтиСвойстваПоказателя(КодПоказателя)
	СвойстваПоказателя = СвойстваПоказателей.НайтиСтроки(Новый Структура("Показатель", КодПоказателя));
	Если СвойстваПоказателя.Количество() = 0 Тогда
		Для Каждого Стр из СвойстваПоказателей Цикл
			Если Лев(КодПоказателя, СтрДлина(Стр.Показатель)) = Стр.Показатель Тогда
				СвойстваПоказателя = Стр;
				Прервать;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	Возврат СвойстваПоказателя;
КонецФункции

&НаКлиенте
Процедура ВвестиПоказатель(Элемент, Область, КодПоказателя, Знач ЭтоСумма, Знач ТекстВыбора, ТаблицаВыбора, СтандартнаяОбработка, КолонкаПоиска = "Код") Экспорт
	
	Если ТаблицаВыбора = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	СтандартнаяОбработка = Ложь;
	
	Если Область.Имя = КодПоказателя Тогда
		ИсходноеЗначение = ?(ТипЗнч(Область.Значение) = Тип("Строка"), СокрЛП(Область.Значение), Область.Значение);
		Если СтрНайти(Врег(Область.Имя), "ТОРГУЮЩАЯСТРАНА") > 0 Тогда
			ИсходноеЗначение = СокрЛП(ТабличныйДокумент.Области.ТоргующаяСтранаКод.Значение);
		ИначеЕсли СтрНайти(Врег(Область.Имя), "СТРАНАОТПРАВЛЕНИЯ") > 0 Тогда
			ИсходноеЗначение = СокрЛП(ТабличныйДокумент.Области.СтранаОтправленияКод.Значение);
		ИначеЕсли СтрНайти(Врег(Область.Имя), "СТРАНАНАЗНАЧЕНИЯ") > 0	Тогда
			ИсходноеЗначение = СокрЛП(ТабличныйДокумент.Области.СтранаНазначенияКод.Значение);
		ИначеЕсли СтрНайти(Врег(Область.Имя), "ВИДТРАНСПОРТА") > 0 Тогда	
			ИсходноеЗначение = СокрЛП(ТабличныйДокумент.Области.ВидТранспортаКод.Значение);
		КонецЕсли;
	Иначе
		Разделитель = ?(Лев(Область.Имя, СтрДлина(КодПоказателя) + 1) = КодПоказателя + "_", "_", "");
		Если СтрНайти(Врег(Область.Имя), "СТРАНАТОВАРА") > 0 Тогда
			ИмяОбласти = "СтранаТовараКод" + СтрЗаменить(Область.Имя, КодПоказателя, "");
			ИсходноеЗначение = "";
			Если ТабличныйДокумент.Области.Найти(ИмяОбласти) <> Неопределено Тогда
				ИсходноеЗначение = СокрЛП(ТабличныйДокумент.Области[ИмяОбласти].Значение);
			КонецЕсли;
		ИначеЕсли СтрНайти(Врег(Область.Имя), "ВАЛЮТАТОВАРАКОД") > 0 ИЛИ СтрНайти(Врег(Область.Имя), "ЕДИЗМТОВАРАКРАТКО") > 0 Тогда
			ИсходноеЗначение = СокрЛП(Область.Значение);
			Если ПустаяСтрока(ИсходноеЗначение) И НЕ ПустаяСтрока(ТабличныйДокумент.Области.КодВалютыЦеныТовара.Значение) Тогда
				ИсходноеЗначение = СокрЛП(ТабличныйДокумент.Области.КодВалютыЦеныТовара.Значение);
			КонецЕсли;
		Иначе
			ИндексОбласти = 1;
			ИсходноеЗначение = "";
			Пока ТабличныйДокумент.Области.Найти(КодПоказателя + Разделитель + Формат(ИндексОбласти, "ЧГ=")) <> Неопределено Цикл
				ИсходноеЗначение = ИсходноеЗначение + Строка(ТабличныйДокумент.Области[КодПоказателя + Разделитель + Формат(ИндексОбласти, "ЧГ=")].Значение);
				ИндексОбласти = ИндексОбласти + 1;
			КонецЦикла;
			ИсходноеЗначение = СокрЛП(ИсходноеЗначение);
		КонецЕсли;
	КонецЕсли;
	
	Если СтрНайти(Область.Имя, "ВалютаТовара") > 0 ИЛИ СтрНайти(Область.Имя, "ЕдИзмТовара") > 0 Тогда
		
		ТаблицаДляВыбора.Очистить();
		Для Каждого СтрокаВыбора Из ТаблицаВыбора Цикл
			СтрокаТаблицы = ТаблицаДляВыбора.Добавить();
			СтрокаТаблицы.Код      = СтрокаВыбора.Код;
			СтрокаТаблицы.Кратко   = СтрокаВыбора.Название;
			СтрокаТаблицы.Название = СтрокаВыбора.РезультатПроверки;
		КонецЦикла;
		
		ПараметрыФормы = Новый Структура;
		ПараметрыФормы.Вставить("Заголовок",                      ТекстВыбора);
		ПараметрыФормы.Вставить("ТаблицаЗначений",                ТаблицаДляВыбора);
		ПараметрыФормы.Вставить("СтруктураДляПоиска",             Новый Структура("Кратко", ИсходноеЗначение));
		ПараметрыФормы.Вставить("ВключитьВидимостьКолонкиКратко", Истина);
		ПараметрыФормы.Вставить("НаимКолонкиНазвание",            "Наименование");
		
		ДополнительныеПараметры = Новый Структура("Элемент, Область, КодПоказателя, ТаблицаВыбора, КолонкаПоиска, ИндексОбласти, Разделитель", Элемент, Область, КодПоказателя, ТаблицаВыбора, КолонкаПоиска, ИндексОбласти, Разделитель);
		ОписаниеОповещения = Новый ОписаниеОповещения("ВвестиПоказательВалютаТовараЗавершение", ЭтотОбъект, ДополнительныеПараметры);
		
		ОткрытьФорму("Обработка.ОбщиеОбъектыРеглОтчетности.Форма.ФормаВыбораЗначенияИзТаблицы", ПараметрыФормы, ЭтаФорма,,,, ОписаниеОповещения, РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);

		Возврат;
		
	Иначе
		
		ПараметрыФормы = Новый Структура;
		ПараметрыФормы.Вставить("Заголовок",                      ТекстВыбора);
		ПараметрыФормы.Вставить("ТаблицаЗначений",                ТаблицаВыбора);
		ПараметрыФормы.Вставить("СтруктураДляПоиска",             Новый Структура("Код", ИсходноеЗначение));
		
		ДополнительныеПараметры = Новый Структура("Элемент, Область, КодПоказателя, ТаблицаВыбора, КолонкаПоиска, ИндексОбласти, Разделитель", Элемент, Область, КодПоказателя, ТаблицаВыбора, КолонкаПоиска, ИндексОбласти, Разделитель);
		ОписаниеОповещения = Новый ОписаниеОповещения("ВвестиПоказательИначеЗавершение", ЭтотОбъект, ДополнительныеПараметры);
		
		ОткрытьФорму("Обработка.ОбщиеОбъектыРеглОтчетности.Форма.ФормаВыбораЗначенияИзТаблицы", ПараметрыФормы, ЭтаФорма,,,, ОписаниеОповещения, РежимОткрытияОкнаформы.БлокироватьОкноВладельца);
		
		Возврат; 
		
	КонецЕсли;
	
	ВвестиПоказательПродолжение(Элемент, Область, КодПоказателя, ТаблицаВыбора, КолонкаПоиска, ИндексОбласти, Разделитель);
	
КонецПроцедуры

