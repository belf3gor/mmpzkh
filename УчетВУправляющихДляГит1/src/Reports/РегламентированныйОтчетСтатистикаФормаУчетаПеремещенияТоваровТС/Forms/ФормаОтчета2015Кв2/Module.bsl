&НаКлиенте
Процедура ВвестиПоказательПродолжение(Элемент, Область, КодПоказателя, ТаблицаВыбора, КолонкаПоиска, ИндексОбласти, Разделитель, РезультатВыбора = Неопределено)

	//если показатель входит в состав многострочной части, тогда имя области не будет совпадать с переданным кодом показателя
	//необходимо это учесть
	//считаем, что в многострочной части не может быть показателя, состоящего из нескольких ячеек	
	
	Если Область.Имя = КодПоказателя ИЛИ ПоказательВходитВМногострочнуюЧасть(КодПоказателя) > 0 Тогда
		ОбластьИмя = Область.Имя;
		Если СтрНайти(Врег(КодПоказателя), "ТОРГУЮЩАЯСТРАНА") > 0 Тогда
			ИмяКод = "ТоргующаяСтранаКод";
			ИмяНаименование = "ТоргующаяСтранаНаименование";
			ТабличныйДокумент.Области[ИмяКод].Значение = РезультатВыбора["Код"];
			ТабличныйДокумент.Области[ИмяНаименование].Значение = РезультатВыбора["Название"];
		ИначеЕсли СтрНайти(Врег(Область.Имя), "СТРАНАОТПРАВЛЕНИЯ") > 0 Тогда
			ИмяКод = "СтранаОтправленияКод";
			ИмяНаименование = "СтранаОтправленияНаименование";
			ТабличныйДокумент.Области[ИмяКод].Значение = РезультатВыбора["Код"];
			ТабличныйДокумент.Области[ИмяНаименование].Значение = РезультатВыбора["Название"];
		ИначеЕсли СтрНайти(Врег(Область.Имя), "СТРАНАНАЗНАЧЕНИЯ") > 0 Тогда
			ИмяКод = "СтранаНазначенияКод";
			ИмяНаименование = "СтранаНазначенияНаименование";
			ТабличныйДокумент.Области[ИмяКод].Значение = РезультатВыбора["Код"];
			ТабличныйДокумент.Области[ИмяНаименование].Значение = РезультатВыбора["Название"];
		ИначеЕсли СтрНайти(Врег(КодПоказателя), "СТРАНАТОВАРА") > 0  Тогда
			ИмяКод = "СтранаТовараКод" + СтрЗаменить(ОбластьИмя, КодПоказателя, "");
			ИмяНаименование = "СтранаТовараНаименование" + СтрЗаменить(ОбластьИмя, КодПоказателя, "");
			ТабличныйДокумент.Области[ИмяКод].Значение = РезультатВыбора["Код"];
			ТабличныйДокумент.Области[ИмяНаименование].Значение = РезультатВыбора["Название"];
		ИначеЕсли СтрНайти(Врег(КодПоказателя), "ВИДТРАНСПОРТА") > 0  Тогда
			ИмяКод = "ВидТранспортаКод";
			ИмяНаименование = "ВидТранспортаНаименование";
			ТабличныйДокумент.Области[ИмяКод].Значение = РезультатВыбора["Код"];
			ТабличныйДокумент.Области[ИмяНаименование].Значение = "";
		ИначеЕсли СтрНайти(Врег(КодПоказателя), "ЕДИЗМТОВАРА") > 0  Тогда
			ИмяНаименование = "ЕдИзмТовараКратко" + СтрЗаменить(ОбластьИмя, КодПоказателя, "");
			ТабличныйДокумент.Области[ИмяНаименование].Значение = РезультатВыбора["Кратко"];
			НомСтроки = Число(Сред(СтрЗаменить(ОбластьИмя, КодПоказателя, ""), 2));
			ТаблицаБлока = Неопределено;
			мСтруктураМногострочныхРазделов.Свойство(СтруктураРеквизитовФормы.мИдГруппы_2, ТаблицаБлока);
			ТаблицаБлока = ЭтаФорма[ТаблицаБлока];
			Если ТаблицаБлока <> Неопределено Тогда
				ТекущаяСтрока = ТаблицаБлока.Получить(НомСтроки-1);
				ТекущаяСтрока.ЕдИзмТовараКод = РезультатВыбора["Код"];
			КонецЕсли;
		Иначе
			Область.Значение = РезультатВыбора[КолонкаПоиска];
		КонецЕсли; 
	Иначе
		СтрокаРезультатВыбора = Строка(РезультатВыбора[КолонкаПоиска]);
		Для Инд = СтрДлина(СтрокаРезультатВыбора) + 1 По ИндексОбласти - 1 Цикл
			СтрокаРезультатВыбора = " " + РезультатВыбора[КолонкаПоиска];
		КонецЦикла;
		Для Инд = 1 По ИндексОбласти - 1 Цикл
			ТабличныйДокумент.Области[КодПоказателя + Разделитель + Формат(Инд, "ЧГ=")].Значение = СокрЛП(Сред(РезультатВыбора[КолонкаПоиска], Инд, 1));
		КонецЦикла;
	КонецЕсли;
	
	Модифицированность = Истина;
	
	ОбработкаИзмененияСодержимогоВПолеТабличногоДокумента(Элемент, Область);
	
	Если СтрНайти(Область.Имя, "СтранаОтправления") > 0 ИЛИ СтрНайти(Область.Имя, "СтранаНазначения") > 0 Тогда
		КопироватьДанныеФормы(СвойстваПоказателейЭталон, ТаблицаВыбора);
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ОбработкаИзмененияСодержимогоВПолеТабличногоДокумента(Элемент, Область)
	
	ИмяПоказателя = Область.Имя;
	ЗначПоказателя = Область.Значение;
	
	Если ИмяПоказателя = "ВалютаТовараКод_1" Тогда
		 ТабличныйДокумент.Области.КодВалютыЦеныТовара.Значение = ТабличныйДокумент.Области[ИмяПоказателя].Значение;
	КонецЕсли; 
	
	Если ИмяПоказателя = "НаправлениеПеремещения" Тогда
		 СтруктураРеквизитовФормы.НапрПеремещения = ТабличныйДокумент.Области[ИмяПоказателя].Значение;
		 ИзмНаправлениеПеремещения(ЭтаФорма);
		 ЗаполнитьПоказателиИзРеквизитовФормыНаКлиенте();
	КонецЕсли; 
	
	Если СтрНайти(Врег(ИмяПоказателя), "СТРАНАОТПРАВЛЕНИЯ") > 0 Тогда
		СтруктураРеквизитовФормы.СтранаОтправления = СтранаКраткоПоКоду(ТабличныйДокумент.Области.СтранаОтправленияКод.Значение);
		СтруктураРеквизитовФормы.ОтправительСтранаКод = ТабличныйДокумент.Области.СтранаОтправленияКод.Значение;
		СтруктураРеквизитовФормы.ОтправительСтранаНаименование = ТабличныйДокумент.Области.СтранаОтправленияНаименование.Значение;
		ЗаполнитьПоказателиИзРеквизитовФормыНаКлиенте();
	КонецЕсли;		
	
	Если СтрНайти(Врег(ИмяПоказателя), "СТРАНАНАЗНАЧЕНИЯ") > 0 Тогда
		СтруктураРеквизитовФормы.СтранаНазначения = СтранаКраткоПоКоду(ТабличныйДокумент.Области.СтранаНазначенияКод.Значение);
		СтруктураРеквизитовФормы.ПолучательСтранаКод = ТабличныйДокумент.Области.СтранаНазначенияКод.Значение;
		СтруктураРеквизитовФормы.ПолучательСтранаНаименование = ТабличныйДокумент.Области.СтранаНазначенияНаименование.Значение;
		ЗаполнитьПоказателиИзРеквизитовФормыНаКлиенте();
	КонецЕсли;
	
	Модифицированность = Истина;
	
КонецПроцедуры

&НаКлиенте
Функция ПоказательВходитВМногострочнуюЧасть(ИмяПоказателя) Экспорт

	ПозРазд = 0;
	ИмяПоказателяВСтруктуре = ИмяПоказателя;
	ИмяПоказателяДлина = СтрДлина(ИмяПоказателя);
	Для Поз = 1 По ИмяПоказателяДлина  Цикл
		Сим = Сред(ИмяПоказателя, ИмяПоказателяДлина - Поз + 1, 1);
		Если Сим = "_" Тогда
			 ПозРазд = ИмяПоказателяДлина - Поз + 1;
		     Прервать;
		КонецЕсли; 
	КонецЦикла;
	
	Если ПозРазд > 0 Тогда
		ЧастьПослеРазделителя = Сред(ИмяПоказателя, ПозРазд + 1);
		
		ЭтоЧисло = Истина;
		Попытка
			ЧастьПослеРазделителяЧисло = Число(ЧастьПослеРазделителя);
		Исключение
			ЭтоЧисло = Ложь;
		КонецПопытки;
		
		Если ЭтоЧисло Тогда
			ИмяПоказателяВСтруктуре = Лев(ИмяПоказателя, ПозРазд - 1);
		КонецЕсли; 
	КонецЕсли; 
	
	СтруктураГруппы = Неопределено;
	
	Для Каждого ЭлементСтруктуры Из мСтруктураМногострочныхРазделов Цикл
		ИмяГруппы = ЭлементСтруктуры.Ключ;
		СтруктураГруппы = ЭтаФорма[ЭлементСтруктуры.Значение];

		Если СтруктураГруппы[0].Свойство("ИмяПоказателяВСтруктуре") <> Неопределено Тогда
			Возврат СтруктураГруппы.Количество();
