		ПараметрыФормы.Вставить("Отправитель_ВидДокНаим", СтруктураРеквизитовФормы.Отправитель_ВидДокНаим);
		ПараметрыФормы.Вставить("Отправитель_СерДок", СтруктураРеквизитовФормы.Отправитель_СерДок);
		ПараметрыФормы.Вставить("Отправитель_НомДок", СтруктураРеквизитовФормы.Отправитель_НомДок);
