// Обработчик события "ПриСозданииНаСервере" формы.
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	// Прочитаем переданные параметры.
	Если Параметры.Свойство("ДатаПросмотра") Тогда
		Параметры.Свойство("ДатаПросмотра", Отчет.ДатаПросмотра);
		ИспользоватьРучныеНастройки = Истина;
	КонецЕсли;
	
	Если Параметры.Свойство("ОбъектНачисления") Тогда
		Параметры.Свойство("ОбъектНачисления", ПараметрОбъектНачисления);
		ИспользоватьРучныеНастройки = Истина;
	КонецЕсли;
	
	// Установка настроек печати по умолчанию. Если настройки были изменены, они будут загружены при формировании отчета.
	Результат.АвтоМасштаб = Истина;
	
	УстановитьНачальныеНастройки();
	
	ОбновитьТекстЗаголовка(ЭтаФорма);
	
	УправлениеФормой(ЭтаФорма);
	
	// СхемыУчета
	ОТР_СхемыУчетаСервер.ПриСозданииНаСервере(ЭтаФорма, Элементы.ГруппаОсновнаяКоманднаяПанель);
	// Конец СхемыУчета
	
КонецПроцедуры

&НаКлиенте
// Обработчик события "ПриОткрытии" формы.
Процедура ПриОткрытии(Отказ)
	
	// Задаем параметры из переданных данных, так как значение
	// было восстановлено из настроек.
	Если ЗначениеЗаполнено(ПараметрОбъектНачисления) Тогда
		Отчет.ОбъектНачисления = ПараметрОбъектНачисления;
	ИначеЕсли ИспользоватьРучныеНастройки Тогда
		Отчет.ОбъектНачисления = Неопределено;
	КонецЕсли;
	
	// Сформируем отчет если необходимо формировать при открытии.
	Если ИспользоватьРучныеНастройки Тогда
		СформироватьОтчет(Команды.СформироватьОтчет);
	КонецЕсли;
	
КонецПроцедуры

