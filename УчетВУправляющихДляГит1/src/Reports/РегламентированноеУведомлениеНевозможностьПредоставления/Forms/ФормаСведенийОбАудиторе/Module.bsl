#Область ОбработчикиСобытийФормы
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Параметры.Свойство("ЮрФиз", ЮрФиз);
	Параметры.Свойство("_ОРНЗ", _ОРНЗ);
	Параметры.Свойство("_НаимОрг", _НаимОрг);
	Параметры.Свойство("_ИННЮЛ", _ИННЮЛ);
	Параметры.Свойство("_КПП", _КПП);
	Параметры.Свойство("_ИННФЛ", _ИННФЛ);
	Параметры.Свойство("_Фамилия", _Фамилия);
	Параметры.Свойство("_Имя", _Имя);
	Параметры.Свойство("_Отчество", _Отчество);
	
	УправлениеФормой(ЭтотОбъект);
КонецПроцедуры
#КонецОбласти

#Область ОбработчикиСобытийФормы
&НаКлиенте
Процедура Ок(Команда)
	Результат = Новый Структура("ЮрФиз, _ОРНЗ", ЮрФиз, _ОРНЗ);
	Если ЮрФиз = 0 Тогда 
		Результат.Вставить("_ИННЮЛ", _ИННЮЛ);
		Результат.Вставить("_КПП", _КПП);
		Результат.Вставить("_НаимОрг", _НаимОрг);
		Результат.Вставить("ТекстовоеОписание", "Аудитор: " + _НаимОрг);
	Иначе
		Результат.Вставить("_ИННФЛ", _ИННФЛ);
		Результат.Вставить("_Фамилия", _Фамилия);
		Результат.Вставить("_Имя", _Имя);
		Результат.Вставить("_Отчество", _Отчество);
		Результат.Вставить("ТекстовоеОписание", "Аудитор: " + _Фамилия + " " + _Имя + " " + _Отчество);
	КонецЕсли;
	Закрыть(Результат);
КонецПроцедуры

&НаКлиенте
Процедура Отмена(Команда)
	Закрыть();
КонецПроцедуры

&НаКлиенте
Процедура ЮрФизПриИзменении(Элемент)
	УправлениеФормой(ЭтотОбъект);
КонецПроцедуры

#КонецОбласти

&НаКлиентеНаСервереБезКонтекста
Процедура УправлениеФормой(Форма)
	Форма.Элементы.ФЛ.Видимость = (Форма.ЮрФиз = 1);
	Форма.Элементы.ЮЛ.Видимость = (Форма.ЮрФиз = 0);
КонецПроцедуры
