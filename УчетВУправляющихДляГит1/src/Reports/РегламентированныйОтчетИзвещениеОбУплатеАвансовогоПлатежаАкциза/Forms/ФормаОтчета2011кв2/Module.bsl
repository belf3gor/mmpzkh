Функция ИзвлечьСтруктуруXML()
	
	ДеревоСтруктуры = Новый ДеревоЗначений;
	ДеревоСтруктуры.Колонки.Добавить("Код");
	ДеревоСтруктуры.Колонки.Добавить("Тип");
	ДеревоСтруктуры.Колонки.Добавить("Формат");
	ДеревоСтруктуры.Колонки.Добавить("МинРазмерность");
	ДеревоСтруктуры.Колонки.Добавить("МаксРазмерность");
	ДеревоСтруктуры.Колонки.Добавить("Обязательность");
	ДеревоСтруктуры.Колонки.Добавить("Многостраничность");
	ДеревоСтруктуры.Колонки.Добавить("Многострочность");
	ДеревоСтруктуры.Колонки.Добавить("Раздел");
	ДеревоСтруктуры.Колонки.Добавить("Ключ");
	ДеревоСтруктуры.Колонки.Добавить("Условие");
	ДеревоСтруктуры.Колонки.Добавить("ЗначениеПоУмолчанию");
	ДеревоСтруктуры.Колонки.Добавить("Значение");
	ДеревоСтруктуры.Колонки.Добавить("Представление");
	ДеревоСтруктуры.Колонки.Добавить("Показатели");
	
	Макет = Отчеты[Сред(Лев(ЭтаФорма.ИмяФормы, СтрНайти(ЭтаФорма.ИмяФормы, ".Форма.") - 1), 7)].ПолучитьМакет("СтруктураXML501");
	ВысотаТаблицы = Макет.ВысотаТаблицы;
	
	УчтенныеГруппы = Новый Соответствие;
	
	Для Уровень = 0 По Макет.КоличествоУровнейГруппировокСтрок() - 1 Цикл
		Макет.ПоказатьУровеньГруппировокСтрок(Уровень);
		Для НомерСтроки = 2 По ВысотаТаблицы Цикл
			НомСтр = ВысотаТаблицы - НомерСтроки + 2;
			Если Макет.Область(НомСтр, 0, НомСтр, 0).Видимость И УчтенныеГруппы.Получить(НомСтр) = Неопределено Тогда
				
				РодительскийУзел = ДеревоСтруктуры;
				Если Уровень <> 0 Тогда
					Для Инд = 1 По НомСтр - 2 Цикл
						Узел = УчтенныеГруппы.Получить(НомСтр - Инд);
						Если Узел <> Неопределено Тогда
							РодительскийУзел = Узел;
							Прервать;
						КонецЕсли;
					КонецЦикла;
				КонецЕсли;
				
				НовСтр = РодительскийУзел.Строки.Вставить(0);
				НовСтр.Код = СокрЛП(Макет.Область(НомСтр, 1, НомСтр, 1).Текст);
				НовСтр.Раздел = СокрЛП(Макет.Область(НомСтр, 2, НомСтр, 2).Текст);
				НовСтр.Ключ = СокрЛП(Макет.Область(НомСтр, 3, НомСтр, 3).Текст);
				НовСтр.Тип = СокрЛП(Макет.Область(НомСтр, 4, НомСтр, 4).Текст);
				НовСтр.Формат = СокрЛП(Макет.Область(НомСтр, 5, НомСтр, 5).Текст);
				МинРазмерность = СокрЛП(Макет.Область(НомСтр, 6, НомСтр, 6).Текст);
				НовСтр.МинРазмерность = ?(ПустаяСтрока(МинРазмерность), ?(НовСтр.Формат = "N", 99999, 0), Число(МинРазмерность));
				МаксРазмерность = СокрЛП(Макет.Область(НомСтр, 7, НомСтр, 7).Текст);
				НовСтр.МаксРазмерность = ?(ПустаяСтрока(МаксРазмерность), 99999, Число(МаксРазмерность));
				НовСтр.Обязательность = СокрЛП(Макет.Область(НомСтр, 8, НомСтр, 8).Текст);
				НовСтр.Многостраничность = НЕ ПустаяСтрока(Макет.Область(НомСтр, 9, НомСтр, 9).Текст);
				НовСтр.Многострочность = НЕ ПустаяСтрока(Макет.Область(НомСтр, 10, НомСтр, 10).Текст);
				НовСтр.Условие = СокрЛП(Макет.Область(НомСтр, 11, НомСтр, 11).Текст);
				НовСтр.ЗначениеПоУмолчанию = СокрЛП(Макет.Область(НомСтр, 12, НомСтр, 12).Текст);
				НовСтр.Представление = СокрЛП(Макет.Область(НомСтр, 13, НомСтр, 13).Текст);
				
				УчтенныеГруппы.Вставить(НомСтр, НовСтр);
				
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	
	Возврат ДеревоСтруктуры;
	
КонецФункции // ИзвлечьСтруктуруXML()

&НаСервере
Функция ПроверитьВозможностьВыгрузки(ПараметрыВыгрузки, ДеревоВыгрузки)
	
	СтатусПроверки = Истина;
	
	// проверка показателей титульного листа
	Если ПустаяСтрока(ПараметрыВыгрузки.НомДок) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Не задан номер документа!", "Раздел1", "НомерЗаяв", 0);
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ПустаяСтрока(ПараметрыВыгрузки.КодНО) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Не указан код налогового органа!",  "Раздел1", "ИФНС", 0);
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ПустаяСтрока(ПараметрыВыгрузки.НаимОргПрод) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Не указано наименование организации-продавца!",  "Раздел1", "ПродавецНаимОрг", 0);
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ПустаяСтрока(ПараметрыВыгрузки.ИННЮЛПрод) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "На указано ИНН продавца!",  "Раздел1", "ПродавецИНН", 0);
		СтатусПроверки = Ложь;
	КонецЕсли;
	Если ПустаяСтрока(ПараметрыВыгрузки.КПППрод) Тогда
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "На указано КПП продавца!",  "Раздел1", "ПродавецКПП", 0);
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	
	// проверка раздела 1.1
	НомерСтроки = 1;
	счСтрок =  0;
	ЗаполненХотяБыОдинИзБлоковРаздела1 = Ложь;
	мРаздел1 = мДанныеОтчета.Раздел1;
	Пока мРаздел1.Свойство("П000100000101_" + Формат(НомерСтроки, "ЧГ=")) Цикл
		
		ИмяЯчейкиКодВидаСпирта = "П000100000102_" + Формат(НомерСтроки, "ЧГ=");
		ИмяЯчейкиОбъемСпирта = "П000100000103_" + Формат(НомерСтроки, "ЧГ=");
		ИмяЯчейкиКодВидаПродукции = "П000100000104_" + Формат(НомерСтроки, "ЧГ=");
		ИмяЯчейкиСуммаАвПлатежа = "П000100000105_" + Формат(НомерСтроки, "ЧГ=");
		ИмяЯчейкиНомерПлатежногоПоручения = "П000100000106_" + Формат(НомерСтроки, "ЧГ=");
		ИмяЯчейкиДатаплатежногоПоручениеия = "П000100000107_" + Формат(НомерСтроки, "ЧГ=");
		
		КодВидаСпирта = СокрЛП(мРаздел1[ИмяЯчейкиКодВидаСпирта]);
		ОбъемСпирта = мРаздел1[ИмяЯчейкиОбъемСпирта];
		КодВидаПродукции = СокрЛП(мРаздел1[ИмяЯчейкиКодВидаПродукции]);
		СуммаАвПлатежа = мРаздел1[ИмяЯчейкиСуммаАвПлатежа];
		НомерПП = СокрЛП(мРаздел1[ИмяЯчейкиНомерПлатежногоПоручения]);
		ДатаПП = мРаздел1[ИмяЯчейкиДатаплатежногоПоручениеия];
		
		НомерСтроки = НомерСтроки + 1;
		
	//	 проверяем только заполненные блоки
		Если НЕ ЗначениеЗаполнено(КодВидаСпирта) И    ОбъемСпирта = 0 И НЕ ЗначениеЗаполнено(КодВидаПродукции) И  СуммаАвПлатежа = 0 И НЕ ЗначениеЗаполнено(НомерПП) И НЕ  ЗначениеЗаполнено(ДатаПП) Тогда
			Продолжить;
		КонецЕсли;
		
		
		Если  НЕ ЗначениеЗаполнено(КодВидаСпирта) Или ОбъемСпирта = 0 Или НЕ ЗначениеЗаполнено(КодВидаПродукции) Или СуммаАвПлатежа = 0 Или НЕ ЗначениеЗаполнено(НомерПП) Или НЕ  ЗначениеЗаполнено(ДатаПП) Тогда
			РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "В строке номер "+НомерСтроки+" заполнены не все показатели!", "Раздел1", "П000100000101_"+НомерСтроки, 0);
			СтатусПроверки = Ложь;
		КонецЕсли;
		
		счСтрок = счСтрок + 1;	
		
	КонецЦикла;
	
	Если счСтрок = 0 Тогда 
		РегламентированнаяОтчетность.СообщитьВТаблицуСообщений(ЭтаФорма, "Должна быть заполнена хотя бы одна строка таблицы!",  "Раздел1", "П000100000101_1", 0);
		СтатусПроверки = Ложь;
	КонецЕсли;
	
	Возврат СтатусПроверки;
	
КонецФункции // ПроверитьВозможностьВыгрузки()

