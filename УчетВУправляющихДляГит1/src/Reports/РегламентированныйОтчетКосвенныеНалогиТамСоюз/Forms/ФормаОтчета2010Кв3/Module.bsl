&НаКлиентеНаСервереБезКонтекста
Процедура Расчет(Форма, ИмяСтраницыПанели = "", Знач ОбластьИмя = "") Экспорт
	
	Перем ТаблицаБлока;
	
	Если (Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет) Тогда
		// отключен режим авторасчета
		
		//даже при отключенном авторасчете необходимо рассчитывать итоговые показатели приложения декларации
		Если ИмяСтраницыПанели = "" Тогда
			Расчет(Форма, "Раздел2_Прил1", ОбластьИмя);
		КонецЕсли;
		
		Если ИмяСтраницыПанели <> "Раздел2_Прил1" Тогда
			Возврат; 
		КонецЕсли;
		
	КонецЕсли;
	
	НомПоз = СтрНайти(ОбластьИмя, "_");
	
	Если НомПоз > 0 Тогда
		ОбластьИмя = Лев(ОбластьИмя, НомПоз - 1);
	КонецЕсли;
		
	Если ИмяСтраницыПанели = "Раздел1" Тогда
		
		Если НЕ ЗначениеЗаполнено(ОбластьИмя) ИЛИ СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П000100003001, ОбластьИмя) > 0 Тогда
			
			Если Форма.СтруктураРеквизитовФормы.НаимТекущегоРаздела = "Раздел1" Тогда
				
				// Сбор данных 	
				П000100003101 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.ТабличныйДокумент.Области.П000100003101.Значение);
				П000100003201 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.ТабличныйДокумент.Области.П000100003201.Значение);
				П000100003301 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.ТабличныйДокумент.Области.П000100003301.Значение);
				П000100003401 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.ТабличныйДокумент.Области.П000100003401.Значение);
				П000100003501 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.ТабличныйДокумент.Области.П000100003501.Значение);
				
				// Расчет
				П000100003001 = П000100003101 
				+ П000100003201
				+ П000100003301
				+ П000100003401
				+ П000100003501;
				
				// Результат
				Форма.ТабличныйДокумент.Области.П000100003001.Значение = П000100003001;
				
			ИначеЕсли Форма.СтруктураДанныхРаздел1.Свойство("П000100003001") И Форма.СтруктураДанныхРаздел1.Свойство("П000100003101") Тогда
				Форма.СтруктураДанныхРаздел1.П000100003101 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.СтруктураДанныхРаздел1.П000100003101);
				Форма.СтруктураДанныхРаздел1.П000100003001 = РегламентированнаяОтчетностьКлиентСервер.ОкруглитьЧислоПоФормату(Форма, Форма.СтруктураДанныхРаздел1.П000100003101);
			КонецЕсли;
			
		КонецЕсли;
		
	ИначеЕсли ИмяСтраницыПанели = "Раздел2_Прил1"  Тогда
		
		Если НЕ ЗначениеЗаполнено(ОбластьИмя) ИЛИ СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П000210004003, ОбластьИмя) > 0
		 ИЛИ СтрЧислоВхождений(Форма.СтруктураЗависимыхЯчеекДляАвторасчета.П000210005003, ОбластьИмя) > 0 Тогда
			
			Форма.мСтруктураМногострочныхРазделов.Свойство(Форма.СтруктураРеквизитовФормы.мИдГруппы21, ТаблицаБлока);
			
			//Сбор данных
			П000210001001 = Форма.ТабличныйДокумент.Области.П000210001001.Значение;
			Если ПустаяСтрока(П000210001001) Тогда
				КодВидаПодакцизногоТовара = 0;
			Иначе
				Если РегламентированнаяОтчетностьКлиентСервер.ЯвляетсяЧислом(П000210001001) Тогда
					КодВидаПодакцизногоТовара = Число(П000210001001);
				Иначе
					КодВидаПодакцизногоТовара = 0;
				КонецЕсли;
			КонецЕсли;
			
			РезультатПоиска = Форма.СтруктураРеквизитовФормы.мСписокКодовАвто.НайтиПоЗначению(КодВидаПодакцизногоТовара);
			
			// Рассчитываем общую мощность двигателей легковых автомобилей (мотоциклов), л.с.
			Если РезультатПоиска <> Неопределено Тогда
				ЧастныйПок = 1;
			Иначе
				ЧастныйПок = 100;
			КонецЕсли;
			
			Колонка3     = 0;
			Колонка3Итог = 0;
			
			Для Инд = 0 По Форма[Форма.мСтруктураМногострочныхРазделов.П0002100040].Количество() - 1 Цикл
				
				ИндСтр = Формат(Инд + 1, "ЧГ=0");
				
				Колонка3 = Форма.ТабличныйДокумент.Области["П000210004001_" + ИндСтр].Значение
				* Форма.ТабличныйДокумент.Области["П000210004002_" + ИндСтр].Значение / ЧастныйПок;
				
				Если НЕ (Форма.СтруктураРеквизитовФормы.ФлажокОтклАвтоРасчет) Тогда	 
					Форма.ТабличныйДокумент.Области["П000210004003_" + ИндСтр].Значение = Колонка3;
					Колонка3Итог = Колонка3Итог + Колонка3;
				Иначе
					Колонка3Итог = Колонка3Итог + Форма.ТабличныйДокумент.Области["П000210004003_" + ИндСтр].Значение;
				КонецЕсли; 
				
			КонецЦикла;
			
			Форма.ТабличныйДокумент.Области.П000210005003.Значение = Колонка3Итог;
			
		КонецЕсли;
		
	ИначеЕсли ИмяСтраницыПанели = ""  Тогда
		
	    Расчет(Форма, "Раздел1",       ОбластьИмя);
		Расчет(Форма, "Раздел2_Прил1", ОбластьИмя);
		
	КонецЕсли;	
	
КонецПроцедуры

