&НаСервере
Процедура ЗаполнитьСодержательнуюЧасть(УзелРодитель)
	Титульный			= мДанныеОтчета.ПолеТабличногоДокументаТитульный;
	Раздел1				= мДанныеОтчета.ПолеТабличногоДокументаРаздел1;
	Раздел2				= мДанныеОтчета.Раздел2;
	Раздел2_Прил1		= мДанныеОтчета.Раздел2_Прил1;

	// выгружаем раздел 1
	УзелСумНалПУ = ПолучитьПодчиненныйЭлемент(УзелРодитель, "СумНалПУ");
	Если Не Раздел1.Свойство("П000100003001") Тогда 
		Раздел1.Вставить("П000100003001", 0);
	КонецЕсли;
	Если Не Раздел1.Свойство("П000100004001") Тогда 
		Раздел1.Вставить("П000100004001", 0);
	КонецЕсли;
	Если Раздел1.П000100003001 > 0 И Раздел1.П000100004001 = 0 Тогда
		РегламентированнаяОтчетность.УдалитьУзел(ПолучитьПодчиненныйЭлемент(УзелСумНалПУ, "СтоимНеНал")); // нулевое значение СтоимНеНал не выгружается лишь если НалПУ > 0 	
	КонецЕсли;
	ЗаполнитьДаннымиУзел(Раздел1, УзелСумНалПУ);

	// выгружаем раздел 2
	УзелСумАкцПУШаблон = ПолучитьПодчиненныйЭлемент(УзелРодитель, "СумАкцПУ");
	Для Каждого ЛистРаздела2 Из Раздел2 Цикл
		ДанныеЛистРаздела2 = ЛистРаздела2.Данные[0].Значение;
		
		//собираем данные для выборки приложений к выгруженным строкам раздела
		КБК 	= СокрЛП(ДанныеЛистРаздела2["П000200002001"]);
		
		УзелСумАкцПУ = СкопироватьУзел(УзелРодитель, УзелСумАкцПУШаблон);
		ЗаполнитьДаннымиУзел(ДанныеЛистРаздела2, УзелСумАкцПУ);
		
		УзелНалБазаВидШаблон = ПолучитьПодчиненныйЭлемент(УзелСумАкцПУ, "НалБазаВид");
		Инд = 1;
		ИндСтр = "1";
		Пока РегламентированнаяОтчетностьКлиентСервер.СвойствоОпределено(ДанныеЛистРаздела2, "П000200004001_" + ИндСтр) Цикл
			УзелНалБазаВид = СкопироватьУзел(УзелСумАкцПУ, УзелНалБазаВидШаблон);
			ВыгрузитьСтрокуМногострочнойЧасти(ДанныеЛистРаздела2, УзелНалБазаВид, Инд);
			
			//собираем данные для выборки приложений к каждой выгруженной строке
			ВидПАТов 	= СокрЛП(ДанныеЛистРаздела2["П000200004001_" + ИндСтр]);
			
			// выгружаем приложения по фильтру выгруженной строки
			УзелРасчНалБазаВидШаблон = ПолучитьПодчиненныйЭлемент(УзелНалБазаВид, "РасчНалБазаВид");
			Для Каждого ЛистПриложения Из Раздел2_Прил1 Цикл
				
				ДанныеЛистаПриложения = ЛистПриложения.Данные[0].Значение;
				Если КБК <> СокрЛП(ДанныеЛистаПриложения.П000210003001) ИЛИ ВидПАТов <> СокрЛП(ДанныеЛистаПриложения.П000210001001) Тогда
					Продолжить;
				КонецЕсли;
				
				ИндПрил = 1;
				Пока РегламентированнаяОтчетностьКлиентСервер.СвойствоОпределено(ДанныеЛистаПриложения, "П000210004003_" + Формат(ИндПрил, "ЧГ=")) Цикл
					УзелРасчНалБазаВид = СкопироватьУзел(УзелНалБазаВид, УзелРасчНалБазаВидШаблон);	
					ВыгрузитьСтрокуМногострочнойЧасти(ДанныеЛистаПриложения, УзелРасчНалБазаВид, ИндПрил);
					ИндПрил = ИндПрил + 1;	
                КонецЦикла;

			КонецЦикла;
			
			Инд = Инд + 1;
			ИндСтр = Формат(Инд, "ЧГ=");
		КонецЦикла;
		
	КонецЦикла;
		
КонецПроцедуры

&НаСервере
Функция ВывестиПоказательВXML(Узел, ЗначениеПоказателя)
	
	МинШирина = Узел.МинРазмерность;
	МаксШирина = Узел.МаксРазмерность;
	
	Если Узел.Формат = "T" ИЛИ Узел.Формат = "Т" Тогда // учтем оба варианта: кириллицу и латиницу
		Если ТипЗнч(ЗначениеПоказателя) = Тип("Дата") Тогда
			ЗначениеПоказателяСтр = Формат(ЗначениеПоказателя, "ДФ=dd.MM.yyyy");
		Иначе
			ЗначениеПоказателяСтр = СокрЛП(ЗначениеПоказателя);
		КонецЕсли;
		Узел.Значение = ?(МаксШирина < СтрДлина(ЗначениеПоказателяСтр), СокрЛП(Лев(ЗначениеПоказателяСтр, МаксШирина)), ЗначениеПоказателяСтр);
	ИначеЕсли Узел.Формат = "N" Тогда
		СтрокаФормата = "ЧРД=.;ЧН=0;ЧГ=;";
		Если Узел.МаксРазмерность <> 0 И Узел.МаксРазмерность <> 99999 Тогда
			СтрокаФормата = СтрокаФормата + "ЧЦ=" + Формат(Узел.МаксРазмерность, "ЧГ=") + ";";
		КонецЕсли;
		Если Узел.МинРазмерность <> 99999 Тогда
			СтрокаФормата = СтрокаФормата + "ЧДЦ=" + Формат(Узел.МинРазмерность, "ЧГ=") + ";";
		КонецЕсли;
		Узел.Значение = СокрЛП(Формат(ЗначениеПоказателя, СтрокаФормата));
	ИначеЕсли Узел.Формат = "gYear" Тогда
		Если ТипЗнч(ЗначениеПоказателя) = Тип("Дата") Тогда
			Узел.Значение = СокрЛП(Формат(ЗначениеПоказателя, "ДФ=гггг"));
		Иначе
			Узел.Значение = Прав(СокрЛП(ЗначениеПоказателя), 4);
		КонецЕсли;
	КонецЕсли;
	
КонецФункции

