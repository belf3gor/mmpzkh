
#Область СлужебныеПроцедурыИФункции

&НаСервере
// Процедура-обработчик события "ПриСозданииНаСервере" формы.
//
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если Параметры.Свойство("ВидОперации") Тогда
		
		ВидОперации = Параметры.ВидОперации;
		
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
// Процедура-обработчик нажатия на кнопку "ОК" формы.
//
Процедура ОК(Команда)
	
	ВозвратПароль = Пароль;
	
	Если ПустаяСтрока(Пароль) И НЕ ПустаяСтрока(Элементы.Пароль.ТекстРедактирования) Тогда
		ВозвратПароль = Элементы.Пароль.ТекстРедактирования;
	КонецЕсли;
	
	Оповестить(ВидОперации, ВозвратПароль, ВладелецФормы);
	
	Закрыть(ВозвратПароль);
	
КонецПроцедуры // ОК()

&НаКлиенте
// Процедура-обработчик нажатия на кнопку "Отмена" формы.
//
Процедура Отмена(Команда)
	
	Оповестить(ВидОперации, "", ВладелецФормы);
	
	Закрыть("");
	
КонецПроцедуры // Отмена()

#КонецОбласти