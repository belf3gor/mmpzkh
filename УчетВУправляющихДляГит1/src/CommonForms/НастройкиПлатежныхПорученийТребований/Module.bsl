&НаСервереБезКонтекста
Функция ЗаписатьНастройкиБанковскогоСчета(ОбъектНастройки, НовыеЗначения)
	
	Если Не ПравоДоступа("Редактирование", Метаданные.Справочники.БанковскиеСчета) Тогда
		Возврат Ложь;
	КонецЕсли;
	
	ЕстьИзменения = Ложь;
	
	Для Каждого ОписаниеПоля Из НовыеЗначения Цикл
		
		Если ОбъектНастройки[ОписаниеПоля.Ключ] = ОписаниеПоля.Значение Тогда
			Продолжить;
		КонецЕсли;
		
		ОбъектНастройки[ОписаниеПоля.Ключ] = ОписаниеПоля.Значение;
		
		ЕстьИзменения = Истина;
		
	КонецЦикла;
	
	Если Не ЕстьИзменения Тогда
		Возврат Ложь;
	КонецЕсли;
	
	ТипОбъектаНастройки = ТипЗнч(ОбъектНастройки.Владелец);
	Если ТипОбъектаНастройки = Тип("СправочникСсылка.Организации") Тогда
		ПредставлениеОбъектаНастройки = НСтр("ru = 'банковского счета организации'");
	ИначеЕсли ТипОбъектаНастройки = Тип("СправочникСсылка.Контрагенты") Тогда
		ПредставлениеОбъектаНастройки = НСтр("ru = 'банковского счета контрагента'");
	Иначе
		ПредставлениеОбъектаНастройки = НСтр("ru = 'банковского счета'");
	КонецЕсли;
	
	Попытка
		
		ОбъектНастройки.Записать();
		
	Исключение
		
		ИнформацияОбОшибке = ИнформацияОбОшибке();
		Если ИнформацияОбОшибке.Причина = Неопределено Тогда
			ОписаниеОшибки = ИнформацияОбОшибке.Описание;
		Иначе
			ОписаниеОшибки = ИнформацияОбОшибке.Причина.Описание;
		КонецЕсли;
		
		ОписаниеОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Ошибка при записи настроек %1:
                  |%2'"), 
			ПредставлениеОбъектаНастройки,
			ОписаниеОшибки);
		
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ОписаниеОшибки);
		
		Возврат Ложь;
		
	КонецПопытки;
	
	Возврат Истина;
	
КонецФункции

&НаСервере
Функция ЗаписатьНастройкиБанковскогоСчетаКонтрагента()
	
	НовыеЗначения = Новый Структура;
	НовыеЗначения.Вставить(
		"ТекстКорреспондента",
		?(БанковскийСчетКонтрагентаТекстКорреспондентаИспользование, БанковскийСчетКонтрагентаТекстКорреспондента, ""));
	НовыеЗначения.Вставить(
		"ВсегдаУказыватьКПП",
		БанковскийСчетКонтрагентаВсегдаУказыватьКПП);
	НовыеЗначения.Вставить(
		"ТекстНазначения",
		?(БанковскийСчетКонтрагентаТекстНазначенияИспользование, БанковскийСчетКонтрагентаТекстНазначения, ""));
		
	НастройкиИзменены = ЗаписатьНастройкиБанковскогоСчета(БанковскийСчетКонтрагента.ПолучитьОбъект(), НовыеЗначения);
		
	Если НастройкиИзменены Тогда
		ХранилищеОбщихНастроек.Сохранить(
			"НастройкиПлатежныхПорученийТребований",
			"ВсегдаУказыватьКППКонтрагента",
			НовыеЗначения.ВсегдаУказыватьКПП);
	КонецЕсли;
	
	Возврат НастройкиИзменены;
	
КонецФункции

