		СвойстваФайла.Вставить("АдресДанных", Файл.АдресДанных);

		МассивФайлов.Добавить(СвойстваФайла);
		
		//загружаем в ИБ
		ДобавитьВТаблицуФайловПослеПроверок(МассивФайлов);
		
	КонецЕсли;
	
КонецПроцедуры

