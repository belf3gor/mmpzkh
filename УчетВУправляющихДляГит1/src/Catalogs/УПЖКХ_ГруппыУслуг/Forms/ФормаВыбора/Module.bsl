	Элементы.ОписаниеВидаГрупп.Заголовок = "";
	
	// Если установлен отбор по виду групп, то в качестве заголовка
	// текущей формы установим наименование текущего вида групп.
	Если Параметры.Свойство("Отбор") И Параметры.Отбор.Свойство("Родитель") Тогда
		Заголовок = Строка(Параметры.Отбор.Родитель);
		Элементы.ОписаниеВидаГрупп.Заголовок = Параметры.Отбор.Родитель.ОписаниеВидаГрупп;
	КонецЕсли;
	
