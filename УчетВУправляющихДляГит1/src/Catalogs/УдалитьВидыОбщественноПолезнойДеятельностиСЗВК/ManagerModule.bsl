Процедура ДобавитьВидОбщественноПолезнойДеятельностиСЗВК(Наименование, Код, ИмяПредопределенныхДанных = "")
	
	Если ПустаяСтрока(ИмяПредопределенныхДанных) Тогда
		
		СсылкаНаОбъект = Справочники.ВидыОбщественноПолезнойДеятельностиСЗВК.НайтиПоКоду(Код);
		Если ЗначениеЗаполнено(СсылкаНаОбъект) Тогда
			Элемент = СсылкаНаОбъект.ПолучитьОбъект();
		Иначе
			Элемент = Справочники.ВидыОбщественноПолезнойДеятельностиСЗВК.СоздатьЭлемент();
		КонецЕсли;
		
	Иначе
		
		СсылкаПредопределенного = ОбщегоНазначения.ПредопределенныйЭлемент("Справочник.ВидыОбщественноПолезнойДеятельностиСЗВК." + ИмяПредопределенныхДанных);
		Если ЗначениеЗаполнено(СсылкаПредопределенного) Тогда
			Элемент = СсылкаПредопределенного.ПолучитьОбъект();
		Иначе
			Элемент = Справочники.ВидыОбщественноПолезнойДеятельностиСЗВК.СоздатьЭлемент();
			Элемент.ИмяПредопределенныхДанных = ИмяПредопределенныхДанных;
		КонецЕсли;
		
	КонецЕсли;
	
	Элемент.ДополнительныеСвойства.Вставить("ЗаписьОбщихДанных");
	Элемент.Код = Код;
	Элемент.Наименование = Наименование;
	
	Элемент.Записать();
	
КонецПроцедуры	

