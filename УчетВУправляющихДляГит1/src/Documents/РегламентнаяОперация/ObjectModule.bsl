		Параметры.Вставить("ОтражатьВНалоговомУчетеУСНПатент", Ложь);
		Параметры.Вставить("ПроверкаПримененияУСНВыполнена", Истина);
		
		НалоговыйУчетУСН.ОтразитьВУСН(Ссылка, "РаспределениеЕНВД", Параметры, 2);
	
	КонецЕсли;
	
