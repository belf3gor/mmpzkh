					+ НЗП.НоменклатурнаяГруппа + """.";
			КонецЕсли;
			
			СтрокаКниги = КУДиР.Добавить();
			СтрокаКниги.Организация     = СтруктураШапкиДокумента.Организация;
			СтрокаКниги.СтрокаДокумента = 0;
