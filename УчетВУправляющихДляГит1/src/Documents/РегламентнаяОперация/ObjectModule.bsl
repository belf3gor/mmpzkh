		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(ПротоколНачисленияРезерва.Добавить(), Запись);
		
	КонецЦикла;
		
	ЗакрытиеМесяца.ЗаписьВоВспомогательныеРегистрыСведений(
		Движения,
		ПротоколНачисленияРезерва,
