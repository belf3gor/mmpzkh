				+ Формат(Строка.ДатаОплаты, "ДФ=дд.ММ.гггг")+").";
		КонецЕсли;
		
		СтрокаКниги.Организация = СтруктураШапкиДокумента.Организация;
		СтрокаКниги.Период      = СтруктураШапкиДокумента.КонДата;
