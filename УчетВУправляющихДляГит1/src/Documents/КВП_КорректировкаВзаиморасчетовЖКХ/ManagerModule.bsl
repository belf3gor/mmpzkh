// Функция возвращает параметры проведения.
Функция ПодготовитьПараметрыПроведения(ДокументСсылка, Отказ) Экспорт

	ПараметрыПроведения = Новый Структура;
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("Ссылка", ДокументСсылка);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Реквизиты.Ссылка,
	|	Реквизиты.Номер,
	|	Реквизиты.Дата,
	|	Реквизиты.Организация,
	|	Реквизиты.ЛицевойСчет,
	|	Реквизиты.ЛицевойСчетПолучатель,
	|	Реквизиты.ДоговорПолучатель,
	|	Реквизиты.Ответственный,
	|	Реквизиты.Комментарий,
	|	Реквизиты.ВидОперации,
	|	Реквизиты.КорректироватьНачисления
	|ИЗ
	|	Документ.КВП_КорректировкаВзаиморасчетовЖКХ КАК Реквизиты
	|ГДЕ
	|	Реквизиты.Ссылка = &Ссылка";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Выборка.Следующий();
	
	Реквизиты = Новый Структура("Ссылка,Номер,Дата,Организация,ЛицевойСчет,ЛицевойСчетПолучатель,
								|ДоговорПолучатель,Ответственный,Комментарий,ВидОперации,КорректироватьНачисления");
	
	ЗаполнитьЗначенияСвойств(Реквизиты, Выборка);
	
	ПараметрыПроведения.Вставить("Реквизиты", Реквизиты);
	
	Возврат ПараметрыПроведения;
	
КонецФункции

