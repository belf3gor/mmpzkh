				СтрокаТаблицы.СчетУчетаНДС = СчетаУчета.СчетНДСТаможни;
				
			Иначе
				
				СтрокаТаблицы.СчетУчетаНДС = СчетаУчета.СчетУчетаНДС;
				
			КонецЕсли;

		КонецЕсли;

