		ИначеЕсли (Выборка.Кредит <> 0) Тогда
			Представление = НСтр("ru='Оплата'");
		КонецЕсли;
	КонецЕсли;
	
	Если ПустаяСтрока(Представление)Тогда
		Если Выборка.Дебет > 0 Тогда
			Представление = НСтр("ru='Принято'");
		ИначеЕсли Выборка.Дебет < 0 Тогда
