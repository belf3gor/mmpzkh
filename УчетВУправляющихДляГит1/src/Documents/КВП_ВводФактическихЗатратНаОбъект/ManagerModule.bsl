// Функция возвращает параметры проведения.
Функция ПодготовитьПараметрыПроведения(ДокументСсылка, Отказ) Экспорт

	ПараметрыПроведения = Новый Структура;
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("Ссылка", ДокументСсылка);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Реквизиты.Ссылка,
	|	Реквизиты.Номер,
	|	Реквизиты.Дата,
	|	Реквизиты.Организация,
	|	Реквизиты.Комментарий,
	|	Реквизиты.Ответственный,
	|	Реквизиты.СуммаДокумента
	|ИЗ
	|	Документ.КВП_ВводФактическихЗатратНаОбъект КАК Реквизиты
	|ГДЕ
	|	Реквизиты.Ссылка = &Ссылка";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Выборка.Следующий();
	
	Реквизиты = Новый Структура("Ссылка,Номер,Дата,Организация,
								|Комментарий,Ответственный,СуммаДокумента");
	
	ЗаполнитьЗначенияСвойств(Реквизиты, Выборка);
	
	ПараметрыПроведения.Вставить("Реквизиты", Реквизиты);
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ТаблицаРаспределения.Ссылка,
	|	ТаблицаРаспределения.НомерСтроки,
	|	ТаблицаРаспределения.ОбъектУчета,
	|	ТаблицаРаспределения.ЛицевойСчет,
	|	ТаблицаРаспределения.Услуга,
	|	ТаблицаРаспределения.Количество,
	|	ТаблицаРаспределения.Тариф,
	|	ТаблицаРаспределения.Сумма
	|ИЗ
	|	Документ.КВП_ВводФактическихЗатратНаОбъект.ТаблицаРаспределения КАК ТаблицаРаспределения
	|ГДЕ
	|	ТаблицаРаспределения.Ссылка = &Ссылка";
	
	ТаблицаЛицевыхСчетов = Запрос.Выполнить().Выгрузить();
	
	ПараметрыПроведения.Вставить("ТаблицаЛицевыхСчетов", ТаблицаЛицевыхСчетов);
	
	Возврат ПараметрыПроведения;
	
КонецФункции

