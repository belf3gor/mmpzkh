// Функция возвращает параметры проведения.
Функция ПодготовитьПараметрыПроведения(ДокументСсылка, Отказ) Экспорт

	ПараметрыПроведения = Новый Структура;
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("Ссылка", ДокументСсылка);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Реквизиты.Ссылка,
	|	Реквизиты.Номер,
	|	Реквизиты.Дата,
	|	Реквизиты.Организация,
	|	Реквизиты.ВидОперации,
	|	Реквизиты.Услуга,
	|	Реквизиты.ДатаНач,
	|	Реквизиты.ДатаКон,
	|	Реквизиты.Комментарий,
	|	Реквизиты.Ответственный,
	|	Реквизиты.КраткийСоставДокумента
	|ИЗ
	|	Документ.КВП_УправлениеУслугами КАК Реквизиты
	|ГДЕ
	|	Реквизиты.Ссылка = &Ссылка";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Выборка.Следующий();
	
	Реквизиты = Новый Структура("Ссылка,Номер,Дата,Организация,ВидОперации,
								|Услуга,ДатаНач,ДатаКон,Комментарий,
								|Ответственный,КраткийСоставДокумента");
	
	ЗаполнитьЗначенияСвойств(Реквизиты, Выборка);
	
	ПараметрыПроведения.Вставить("Реквизиты", Реквизиты);
	
	// Подготовим таблицу управления услугами.
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Объекты.Объект,
	|	Объекты.ДатаНачала,
	|	Объекты.ДатаОкончания
	|ИЗ
	|	Документ.КВП_УправлениеУслугами.Объекты КАК Объекты
	|ГДЕ
	|	Объекты.Ссылка = &Ссылка";
	
	ТаблицаУправленияУслугами = Запрос.Выполнить().Выгрузить();
	
	ПараметрыПроведения.Вставить("ТаблицаУправленияУслугами", ТаблицаУправленияУслугами);
	
	Возврат ПараметрыПроведения;
	
КонецФункции

