// Функция возвращает параметры проведения.
Функция ПодготовитьПараметрыПроведения(ДокументСсылка, Отказ) Экспорт

	ПараметрыПроведения = Новый Структура;
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("Ссылка", ДокументСсылка);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Реквизиты.Ссылка,
	|	Реквизиты.Номер,
	|	Реквизиты.Дата,
	|	Реквизиты.Ответственный,
	|	Реквизиты.Организация,
	|	Реквизиты.УправляющаяКомпания,
	|	Реквизиты.Комментарий,
	|	Реквизиты.НДСВТомЧисле,
	|	Реквизиты.ПоставщикУслуг
	|ИЗ
	|	Документ.КВП_УстановкиПроцентовВознагражденияПоУслугам КАК Реквизиты
	|ГДЕ
	|	Реквизиты.Ссылка = &Ссылка";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Выборка.Следующий();
	
	Реквизиты = Новый Структура("Ссылка,Номер,Дата,Ответственный,Организация,УправляющаяКомпания,
								|Комментарий,НДСВТомЧисле,ПоставщикУслуг");
	
	ЗаполнитьЗначенияСвойств(Реквизиты, Выборка);
	
	ПараметрыПроведения.Вставить("Реквизиты", Реквизиты);
	
	// Подготовим таблицу лицевых счетов.
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Услуги.Ссылка,
	|	Услуги.НомерСтроки,
	|	Услуги.ВидыУслуг,
	|	Услуги.Услуга,
	|	Услуги.Процент,
	|	Услуги.ПроцентШтрафа,
	|	Услуги.СпособРасчета
	|ИЗ
	|	Документ.КВП_УстановкиПроцентовВознагражденияПоУслугам.Услуги КАК Услуги
	|ГДЕ
	|	Услуги.Ссылка = &Ссылка";
	
	ТаблицаПоВознаграждениям = Запрос.Выполнить().Выгрузить();
	
	ПараметрыПроведения.Вставить("ТаблицаПоВознаграждениям", ТаблицаПоВознаграждениям);
	
	Возврат ПараметрыПроведения;
	
КонецФункции

