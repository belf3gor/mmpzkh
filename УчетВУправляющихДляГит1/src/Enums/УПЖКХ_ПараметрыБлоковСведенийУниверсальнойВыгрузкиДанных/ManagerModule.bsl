// Возвращает список параметров блока сведений по типу блока.
//
// Параметры:
//  ТипБлока - Строка	 - "Счетчики" или "Услуги".
// 
// Возвращаемое значение:
//  СписокЗначений - список параметров блока сведений.
//
Функция СписокПараметровБлокаСведений(ТипБлока) Экспорт
	
	СписокПараметров = Новый СписокЗначений;
	
	Если ТипБлока = "Услуги" Тогда
		
		СписокПараметров.Добавить(Код,          Код);
		СписокПараметров.Добавить(Наименование, Наименование);
		СписокПараметров.Добавить(СуммаДолга,   СуммаДолга);
		
	ИначеЕсли ТипБлока = "Счетчики" Тогда
		
		СписокПараметров.Добавить(Код,                  Код);
		СписокПараметров.Добавить(Наименование,         Наименование);
		СписокПараметров.Добавить(ЗаводскойНомер,       ЗаводскойНомер);
		СписокПараметров.Добавить(Идентификатор,        Идентификатор);
		СписокПараметров.Добавить(НомерСчетчикаВГИСЖКХ, НомерСчетчикаВГИСЖКХ);
		СписокПараметров.Добавить(Показание,            Показание);
		
	КонецЕсли;
	
	СписокПараметров.Добавить(ПустоеПоле, ПустоеПоле);
	
	Возврат СписокПараметров;
	
КонецФункции

